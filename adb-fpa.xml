<?xml version="1.0" encoding="utf-8"?>
<adb xmlns="http://ciax.sum.naoj.org/ciax-xml/adb">
  <app frm_type="fpa" id="fpa" label="MOIRCS Field Point Analog Input">
    <commands xmlns="http://ciax.sum.naoj.org/ciax-xml/adbc">
      <command id="upd" label="Update Status">
        <frmcmd name="getstat" />
      </command>
      <command id="set1v" label="Set Range +-1.2V">
        <frmcmd name="setr1" />
      </command>
      <command id="set6v" label="Set Range +-6V">
        <frmcmd name="setr5" />
      </command>
    </commands>
    <status xmlns="http://ciax.sum.naoj.org/ciax-xml/adbs">
      <group id="g1" column="3">
        <repeat from="1" to="3">
          <value id="v%d" label="OUTPUT%d (V)" format="%3.2f">
            <float ref="stat" index="$_+1" formula="($#-2048)/4096" />
          </value>
        </repeat>
        <repeat from="4" to="6">
          <value id="v%d" label="OUTPUT%d (V)" format="%3.2f">
            <float ref="stat" index="$_+1" formula="($#-2048)/4096" />
          </value>
        </repeat>
      </group>
    </status>
  </app>
</adb>