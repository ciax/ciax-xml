<?xml version="1.0" encoding="utf-8"?>
<cdb xmlns="http://ciax.sum.naoj.org/ciax-xml/cdb">
  <class frame="fpa" id="fpa" label="MOIRCS Field Point Analog Input">
    <commands xmlns="http://ciax.sum.naoj.org/ciax-xml/cdbc">
      <cmdset id="upd" label="Update Status">
        <command name="getstat" />
      </cmdset>
      <cmdset id="set1v" label="Set Range +-1.2V">
        <command name="setr1" />
      </cmdset>
      <cmdset id="set6v" label="Set Range +-6V">
        <command name="setr5" />
      </cmdset>
    </commands>
    <status xmlns="http://ciax.sum.naoj.org/ciax-xml/cdbs">
      <row label="Group">
        <repeat from="1" to="3">
          <value id="v%d" label="OUTPUT%d (V)">
            <float format="%3.2f" ref="stat:$_+1" formula="($#-2048)/4096" />
          </value>
        </repeat>
      </row>
      <row label="Group">
        <repeat from="4" to="6">
          <value id="v%d" label="OUTPUT%d (V)">
            <float format="%3.2f" ref="stat:$_+1" formula="($#-2048)/4096" />
          </value>
        </repeat>
      </row>
    </status>
  </class>
</cdb>
