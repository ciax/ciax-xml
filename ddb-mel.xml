<?xml version="1.0" encoding="iso-8859-1"?>
<ddb xmlns="http://ciax.sum.naoj.org/ciax-xml" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://ciax.sum.naoj.org/ciax-xml/schema/ddb.xsd">
  <device id="mel" label="MELSEC Q Series">
    <selection>
      <session id="chken" label="Check Enable Flag" type="stat">
        <send>
          <data label="Read region command" pack="lew">0x401</data>
          <data label="Read region subcommand" pack="lew">0</data>
          <data label="Start Address" pack="lew">0x20</data>
          <data label="Device Code" pack="lew">0xB400</data>
          <data label="Data Length" pack="lew">1</data>
        </send>
        <recv>
          <assign length="2" unpack="lew">cre</assign>
        </recv>
      </session>
      <session id="getstat" label="Get all status" type="stat">
        <send>
          <data label="Read region command" pack="lew">0x401</data>
          <data label="Read region subcommand" pack="lew">0</data>
          <data label="Start Address" pack="lew">0</data>
          <data label="Device Code" pack="lew">0xB400</data>
          <data label="Data Length" pack="lew">52</data>
        </send>
        <recv>
          <repeat_assign length="2" unpack="lew" max="51" label="Repeated">x%02x</repeat_assign>
        </recv>
      </session>
      <session id="set_tag" label="Set Tag to Run [HH00]" type="config">
        <send>
          <data label="Write region command" pack="lew">0x1401</data>
          <data label="Write region subcommand" pack="lew">0</data>
          <data label="Start Address" pack="lew">0x101</data>
          <data label="Device Code" pack="lew">0xB400</data>
          <data label="Data Length" pack="lew">1</data>
          <par label="Data" pack="lew" valid="0x[0-9A-Fa-f]{1,4}" />
        </send>
        <recv label="command resp" />
      </session>
      <session id="set_pos" label="Set Pos to Jack [HH00]" type="config">
        <send>
          <data label="Write region command" pack="lew">0x1401</data>
          <data label="Write region subcommand" pack="lew">0</data>
          <data label="Start Address" pack="lew">0x103</data>
          <data label="Device Code" pack="lew">0xB400</data>
          <data label="Data Length" pack="lew">1</data>
          <par label="Data" pack="lew" valid="0x[0-9A-Fa-f]{1,4}" />
        </send>
        <recv label="command resp" />
      </session>
      <session id="start" label="Start Trigger [HHHH]" type="action">
        <send>
          <data label="Write region command" pack="lew">0x1401</data>
          <data label="Write region subcommand" pack="lew">0</data>
          <data label="Start Address" pack="lew">0x102</data>
          <data label="Device Code" pack="lew">0xB400</data>
          <data label="Data Length" pack="lew">1</data>
          <par label="Data" pack="lew" valid="0x[0-9A-Fa-f]{1,4}" />
        </send>
        <recv label="command resp" />
      </session>
      <session id="stop" label="Stop Trigger [HHHH]" type="action">
        <send>
          <data label="Write region command" pack="lew">0x1401</data>
          <data label="Write region subcommand" pack="lew">0</data>
          <data label="Start Address" pack="lew">0x100</data>
          <data label="Device Code" pack="lew">0xB400</data>
          <data label="Data Length" pack="lew">1</data>
          <par label="Data" pack="lew" valid="0x[0-9A-Fa-f]{1,4}" />
        </send>
        <recv label="command resp" />
      </session>
      <session id="clear" label="Clear Action Flags" type="config">
        <send>
          <data label="Write region command" pack="lew">0x1401</data>
          <data label="Write region subcommand" pack="lew">0</data>
          <data label="Start Address" pack="lew">0x100</data>
          <data label="Device Code" pack="lew">0xB400</data>
          <data label="Data Length" pack="lew">4</data>
          <data label="Data" pack="lew">0</data>
          <data label="Data" pack="lew">0</data>
          <data label="Data" pack="lew">0</data>
          <data label="Data" pack="lew">0</data>
        </send>
        <recv label="command resp" />
      </session>
      <session id="errframe">
        <recv>
          <assign length="1">err_net</assign>
          <assign length="1">err_pc</assign>
          <assign length="2">err_uio</assign>
          <assign length="1">err_uch</assign>
          <assign length="2">err_cmd</assign>
          <assign length="2">err_subcmd</assign>
          <assign length="9">errframe</assign>
        </recv>
      </session>
    </selection>
    <cmdframe>
      <data label="SubHeader: Prefix" pack="lew">0x54</data>
      <data label="SubHeader: Serial Number">XX</data>
      <data label="SubHeader: Fixed Number" pack="lew">0</data>
      <data label="Q Header: Network Number" pack="chr">0</data>
      <data label="Q Header: PC Number" pack="chr">0xFF</data>
      <data label="Q Header: Request Unit I/O Number" pack="lew">0x3FF</data>
      <data label="Q Header: Request Unit Station Number" pack="chr">0</data>
      <cc_cmd label="Q Header: Send Data Length MSB" pack="chr" />
      <data label="Q Header: Send Data Length LSB" pack="chr">0</data>
      <ccrange method="len">
        <data label="Q Header: CPU Watch Timer" pack="lew">1</data>
        <selected />
      </ccrange>
    </cmdframe>
    <rspframe wait="0">
      <verify label="SubHeader: Prefix" length="2" unpack="lew" format="%04X">00D4</verify>
      <verify label="SubHeader: Serial Number" length="2">XX</verify>
      <verify label="SubHeader: Fixed Number" length="2" unpack="lew" format="%04X">0000</verify>
      <verify label="Q Header: Network Number" unpack="chr" format="%02X" length="1">00</verify>
      <verify label="Q Header: PC Number" unpack="chr" format="%02X" length="1">FF</verify>
      <verify label="Q Header: Request Unit I/O Number" unpack="lew" format="%04X" length="2">03FF</verify>
      <verify label="Q Header: Request Unit Station Number" unpack="chr" format="%02X" length="1">00</verify>
      <assign label="Response Data Length" length="2" unpack="lew">cc</assign>
      <ccrange method="len">
        <rspcode label="ExitCode" length="2" unpack="lew" format="%04X">
          <case type="pass" msg="OK">0000</case>
          <case msg="RW Region Error" type="warn" option="errframe">0002</case>
          <case msg="CMD Code Error" type="warn" option="errframe">0050</case>
          <case msg="Devide Num Error" type="warn" option="errframe">0056</case>
          <case msg="Communication Error" type="warn" option="errframe">005B</case>
          <case msg="CPU Watch timeout Error" type="warn" option="errframe">0060</case>
          <case type="warn" msg="Unknown" option="errframe"></case>
        </rspcode>
        <selected />
      </ccrange>
    </rspframe>
  </device>
</ddb>