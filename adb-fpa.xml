<?xml version="1.0" encoding="utf-8"?>
<adb xmlns="http://ciax.sum.naoj.org/ciax-xml/adb">
  <app frm_id="fpa" id="fpa" label="MOIRCS Field Point Analog Input">
    <command xmlns="http://ciax.sum.naoj.org/ciax-xml/adbc">
      <group id="g0" caption="Device">
        <item id="upd" label="Update Status">
          <frmcmd name="getstat" />
        </item>
        <item id="set1v" label="Set Range +-1.2V">
          <frmcmd name="setr1" />
        </item>
        <item id="set6v" label="Set Range +-6V(output is +-3V for moircs hall sensor)">
          <frmcmd name="setr6" />
        </item>
        <item id="set15v" label="Set Range +-15V">
          <frmcmd name="setr15" />
        </item>
      </group>
    </command>
    <status xmlns="http://ciax.sum.naoj.org/ciax-xml/adbs" symtbl="fpa">
      <group id="g1" column="3" caption="Voltage">
        <repeat_var from="1" to="6">
          <float id="v$_" label="OUTPUT$_ (V)" format="%2.2f" formula="($#-32768)/32768*6" symbol="volt">
            <field ref="stat" index="$_-1" />
          </float>
        </repeat_var>
      </group>
      <group id="g2" caption="Modes">
        <string id="auto" label="Auto update" symbol="warn" default="0"/>
      </group>
    </status>
    <watch xmlns="http://ciax.sum.naoj.org/ciax-xml/wdb" interval="0.01" period="360">
      <event id="auto" label="Auto switch">
        <pattern var="auto">1</pattern>
        <exec name="upd"/>
      </event>
    </watch>
  </app>
</adb>
