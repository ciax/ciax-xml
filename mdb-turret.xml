<?xml version="1.0" encoding="utf-8"?>
<mdb xmlns="http://ciax.sum.naoj.org/ciax-xml/mdb">
  <macro id="turret" version="5" label="Turret Control" port="55555">
    <group id="grp_init" caption="Initialize" rank="0">
      <item id="tinit" label="Initialize Turret">
        <mcr name="pre_pos"/>
        <upd site="mft"/>
        <mcr name="gh_wheel" retry="3"/>
        <cfg site="mix" name="resetp"/>
        <mcr name="lineup"/>
      </item>
      <item id="thome" label="Turret Shutdown">
        <cfg site="mft" name="set6v"/>
        <upd site="mft"/>
        <mcr name="pre_home"/>
        <mcr name="scan_slot"/>
        <mcr name="scan_home"/>
      </item>
    </group>
    <group id="tr_sub" caption="Turret Commands" rank="1">
      <item id="pre_home" label="Pre-Homing">
        <goal label="All Home?">
          <match form="msg" site="mft" var="v1">HOME</match>
          <match form="msg" site="mft" var="v2">HOME</match>
          <match form="msg" site="mft" var="v3">HOME</match>
          <match form="msg" site="mft" var="v4">HOME</match>
          <match form="msg" site="mft" var="v5">HOME</match>
          <match form="msg" site="mft" var="v6">HOME</match>
        </goal>
        <exec site="mix" name="prehome"/>
        <wait retry="20" label="Start?">
          <not form="msg" var="stp" site="mix">STOP</not>
        </wait>
        <wait retry="300" label="Run end?">
          <equal form="msg" var="stp" site="mix">STOP</equal>
        </wait>
      </item>
      <item id="pre_pos" label="Pre-Positioning">
        <goal label="All Slot11?">
          <match form="data" site="mix" var="mp1">11.0</match>
          <match form="data" site="mix" var="mp2">11.0</match>
          <match form="data" site="mix" var="mp3">11.0</match>
          <match form="data" site="mix" var="mp4">11.0</match>
          <match form="data" site="mix" var="mp5">11.0</match>
          <match form="data" site="mix" var="mp6">11.0</match>
        </goal>
        <mcr name="thome"/>
        <exec site="mix" name="bk_all">
          <argv>1</argv>
        </exec>
        <wait retry="20" label="Start?">
          <not form="msg" var="stp" site="mix">STOP</not>
        </wait>
        <wait retry="300" label="Run end?">
          <equal form="msg" var="stp" site="mix">STOP</equal>
        </wait>
      </item>
      <item id="gh_wheel" label="Go to Home Position">
        <goal label="All Home?" verify="true">
          <match form="msg" site="mft" var="v1">HOME</match>
          <match form="msg" site="mft" var="v2">HOME</match>
          <match form="msg" site="mft" var="v3">HOME</match>
          <match form="msg" site="mft" var="v4">HOME</match>
          <match form="msg" site="mft" var="v5">HOME</match>
          <match form="msg" site="mft" var="v6">HOME</match>
        </goal>
        <exec site="mix" name="posinit"/>
        <wait retry="20" label="Start?">
          <not form="msg" var="stp" site="mix">STOP</not>
        </wait>
        <wait retry="600" label="Run end?">
          <equal form="msg" var="stp" site="mix">STOP</equal>
        </wait>
        <upd site="mft"/>
      </item>
      <item id="lineup" label="Initialize Turret">
        <exec site="mix" name="both_a">
          <argv>6</argv>
        </exec>
        <exec site="mix" name="both_b">
          <argv>6</argv>
        </exec>
        <exec site="mix" name="both_c">
          <argv>10</argv>
        </exec>
        <wait retry="20" label="Start?">
          <not form="msg" var="stp" site="mix">STOP</not>
        </wait>
        <wait retry="300" label="Run end?">
          <equal form="msg" var="stp" site="mix">STOP</equal>
        </wait>
      </item>
    </group>
    <group id="grp_find_slot" caption="Find Slot Position" rank="2">
      <item id="move_s" label="Move to find slot [1-6]">
        <par_num>1:6</par_num>
        <goal label="On Slot?">
          <not form="msg" site="mft" var="v$1">MID</not>
        </goal>
        <exec site="mix" name="fw500">
          <argv>$1</argv>
        </exec>
        <wait retry="20" label="Start?">
          <not form="msg" var="stp" site="mix">STOP</not>
        </wait>
      </item>
      <item id="find_slot" label="Find nearest slots">
        <goal label="On Slot?" verify="true">
          <not form="msg" site="mft" var="v1">MID</not>
          <not form="msg" site="mft" var="v2">MID</not>
          <not form="msg" site="mft" var="v3">MID</not>
          <not form="msg" site="mft" var="v4">MID</not>
          <not form="msg" site="mft" var="v5">MID</not>
          <not form="msg" site="mft" var="v6">MID</not>
        </goal>
        <mcr name="move_s">
          <argv>1</argv>
        </mcr>
        <mcr name="move_s">
          <argv>2</argv>
        </mcr>
        <mcr name="move_s">
          <argv>3</argv>
        </mcr>
        <mcr name="move_s">
          <argv>4</argv>
        </mcr>
        <mcr name="move_s">
          <argv>5</argv>
        </mcr>
        <mcr name="move_s">
          <argv>6</argv>
        </mcr>
        <wait retry="300" label="Run end?">
          <equal form="msg" var="stp" site="mix">STOP</equal>
        </wait>
        <upd site="mft"/>
      </item>
      <item id="scan_slot" label="Scan Slot Position">
        <goal label="On Slot?">
          <not form="msg" site="mft" var="v1">MID</not>
          <not form="msg" site="mft" var="v2">MID</not>
          <not form="msg" site="mft" var="v3">MID</not>
          <not form="msg" site="mft" var="v4">MID</not>
          <not form="msg" site="mft" var="v5">MID</not>
          <not form="msg" site="mft" var="v6">MID</not>
        </goal>
        <upd site="mft"/>
        <mcr name="find_slot" retry="15"/>
      </item>
    </group>
    <group id="grp_find_home" caption="Find Home Position" rank="2">
      <item id="move_h" label="Move to find home [1-6]">
        <par_num>1:6</par_num>
        <goal label="Home?">
          <match form="msg" site="mft" var="v$1">HOME</match>
        </goal>
        <exec site="mix" name="fw">
          <argv>$1</argv>
          <argv>1</argv>
        </exec>
        <wait retry="20" label="Start?">
          <not form="msg" var="stp" site="mix">STOP</not>
        </wait>
      </item>
      <item id="find_home" label="Find Home Position">
        <goal label="All Home?" verify="true">
          <match form="msg" site="mft" var="v1">HOME</match>
          <match form="msg" site="mft" var="v2">HOME</match>
          <match form="msg" site="mft" var="v3">HOME</match>
          <match form="msg" site="mft" var="v4">HOME</match>
          <match form="msg" site="mft" var="v5">HOME</match>
          <match form="msg" site="mft" var="v6">HOME</match>
        </goal>
        <mcr name="move_h">
          <argv>1</argv>
        </mcr>
        <mcr name="move_h">
          <argv>2</argv>
        </mcr>
        <mcr name="move_h">
          <argv>3</argv>
        </mcr>
        <mcr name="move_h">
          <argv>4</argv>
        </mcr>
        <mcr name="move_h">
          <argv>5</argv>
        </mcr>
        <mcr name="move_h">
          <argv>6</argv>
        </mcr>
        <wait retry="300" label="Run end?">
          <equal form="msg" var="stp" site="mix">STOP</equal>
        </wait>
        <upd site="mft"/>
      </item>
      <item id="scan_home" label="Verify Home Position">
        <goal label="All Home?">
          <match form="msg" site="mft" var="v1">HOME</match>
          <match form="msg" site="mft" var="v2">HOME</match>
          <match form="msg" site="mft" var="v3">HOME</match>
          <match form="msg" site="mft" var="v4">HOME</match>
          <match form="msg" site="mft" var="v5">HOME</match>
          <match form="msg" site="mft" var="v6">HOME</match>
        </goal>
        <check label="On Slot?">
          <not form="msg" site="mft" var="v1">MID</not>
          <not form="msg" site="mft" var="v2">MID</not>
          <not form="msg" site="mft" var="v3">MID</not>
          <not form="msg" site="mft" var="v4">MID</not>
          <not form="msg" site="mft" var="v5">MID</not>
          <not form="msg" site="mft" var="v6">MID</not>
        </check>
        <upd site="mft"/>
        <mcr name="find_home" retry="11"/>
      </item>
    </group>
  </macro>
</mdb>
