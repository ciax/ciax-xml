<?xml version="1.0" encoding="iso-8859-1"?>
<ddb xmlns="http://ciax.sum.naoj.org/ciax-xml/ddb" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://ciax.sum.naoj.org/ciax-xml/schema/ddb.xsd">
  <device id="ixe" label="Phytron IXEa-A" reference="http://ciax.sum.naoj.org/man/phytron/phytron-ixe.pdf" wait="0.2">
    <serial speed="9600" databit="8" parity="NONE" stopbit="1" flowctl="NONE" />
    <cmdselect>
      <command id="getstat" label="Get status" response="getstat" type="stat">
        <data>ST</data>
      </command>
      <command id="chkr" label="Check Run (1-6)" response="chkr" type="stat">
        <parameters>
          <par>
            <range>0:5</range>
          </par>
        </parameters>
        <data eval="1">$1 + 1</data>
        <data>=H</data>
      </command>
      <command id="getp" label="Get pulse (0-5)" response="getp" type="stat">
        <parameters>
          <par>
            <range>0:5</range>
          </par>
        </parameters>
        <data eval="1">$1 + 1</data>
        <data>P21R</data>
      </command>
      <command id="setp" label="Set pulse (0-5) (0-19200)" response="default" type="config">
        <parameters>
          <par>
            <range>0:5</range>
          </par>
          <par>
            <range>0:19200</range>
          </par>
        </parameters>
        <data eval="1">$1 + 1</data>
        <data>P21S</data>
        <data eval="1">$2</data>
      </command>
    </cmdselect>
    <cmdframe>
      <data label="Prefix" encode="chr">2</data>
      <selected />
      <data label="Suffix" encode="chr">3</data>
      <data encode="chr">13</data>
      <data encode="chr">10</data>
    </cmdframe>
    <rspselect>
      <response id="getstat">
        <field>
          <regexp>[\d]+</regexp>
          <assign>stat</assign>
        </field>
      </response>
      <response id="chkr">
        <field>
          <length>1</length>
          <array>r:$1</array>
        </field>
      </response>
      <response id="getp">
        <field>
          <regexp>[\d]+</regexp>
          <array>p:$1</array>
        </field>
      </response>
      <response id="default"></response>
    </rspselect>
    <rspframe>
      <field label="Prefix" decode="chr">
        <length>1</length>
        <verify>2</verify>
      </field>
      <field label="ACK" decode="chr">
        <length>1</length>
        <verify>6</verify>
      </field>
      <selected />
      <field label="Suffix" decode="chr">
        <length>1</length>
        <verify>3</verify>
      </field>
    </rspframe>
  </device>
</ddb>