<?xml version="1.0" encoding="iso-8859-1"?>
<ddb xmlns="http://ciax.sum.naoj.org/ciax-xml" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://ciax.sum.naoj.org/ciax-xml/schema/ddb.xsd">
  <device id="ohp" label="OMEGA Helium Pressure Sensor">
    <serial speed="9600" databit="7" parity="ODD" stopbit="1" flowctl="NONE" />
    <cmdframe>
      <select>
        <option id="getstat" type="stat" label="Get Status">
          <data>*X01</data>
        </option>
        <option id="setd" type="config" label="Set default">
          <data>*W1F14</data>
        </option>
        <option id="init" type="config" label="Initialize">
          <data>*Z02</data>
        </option>
      </select>
      <data pack="H*">0D</data>
    </cmdframe>
    <rspframe wait="1">
      <select>
        <option id="getstat">
          <verify length="3">
            <case msg="Prefix OK" type="pass">X01</case>
            <case msg="Prefix mismatch" type="error"></case>
          </verify>
          <assign field="pres" length="5" />
        </option>
        <option id="setd">
          <verify length="3">
            <case msg="Command OK" type="pass">W1F</case>
            <case msg="Command mismatch" type="error"></case>
          </verify>
        </option>
        <option id="init">
          <verify length="3">
            <case msg="Command OK" type="pass">Z02</case>
            <case msg="Command mismatch" type="error"></case>
          </verify>
        </option>
      </select>
    </rspframe>
  </device>
</ddb>