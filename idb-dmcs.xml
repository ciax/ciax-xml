<?xml version="1.0" encoding="utf-8"?>
<idb xmlns="http://ciax.sum.naoj.org/ciax-xml/idb">
  <project id="dmcs" label="Dummy MOIRCS simulator">
    <group id="sim" host="leonid" label="Dummy MOIRCS simulator">
      <site id="tfp" dev_id="tfp" app_id="cfp" port="25691" label="TEST Field Point"/>
      <site id="tap" dev_id="tap" app_id="oma" port="25692" label="TEST Air Pres"/>
      <site id="tma" dev_id="tma" app_id="mma" port="25693" label="TEST Arm"/>
      <site id="tmc" dev_id="tmc" app_id="mmc" port="25694" label="TEST Carousel">
        <command ref="mmc"/>
        <status xmlns="http://ciax.sum.naoj.org/ciax-xml/idbs">
          <group ref="gpos">
            <alias id="acs" ref="abs" label="Access Position" symbol="acs"/>
          </group>
          <group ref="ghide">
            <alias id="rsl" ref="abs" label="Loading Position for Machine" symbol="rsl"/>
            <alias id="asl" ref="abs" label="Access Position for Machine" symbol="asl"/>
          </group>
        </status>
        <watch xmlns="http://ciax.sum.naoj.org/ciax-xml/wdb">
          <event id="mot">
            <block_grp ref="grel"/>
            <block_grp ref="gabs"/>
          </event>
        </watch>
      </site>
      <site id="tmi" dev_id="tmi" app_id="cmi" host="moircsobcp" port="25690" label="Current Mask Index"/>
    </group>
    <group id="sim"  host="pingu" label="Dummy Compressor simulator">
      <site id="tbb" dev_id="tbb" app_id="bbe" port="25696" label="TEST BBE simple">
        <status xmlns="http://ciax.sum.naoj.org/ciax-xml/idbs">
          <group ref="g0" caption="X0-3"/>
          <group ref="g1" caption="X4-7"/>
          <group ref="g2" caption="X8-11"/>
          <group ref="g3" caption="X12-15"/>
        </status>
      </site>
      <site id="tbw" dev_id="tbb" app_id="bbe" host="pingu" port="25697" label="TEST BBE with Watch">
        <command ref="tbb"/>
        <status xmlns="http://ciax.sum.naoj.org/ciax-xml/idbs">
          <group ref="g0" caption="X0-3"/>
          <group ref="g1" caption="X4-7"/>
          <group ref="g2" caption="X8-11"/>
          <group ref="g3" caption="X12-15"/>
        </status>
        <watch xmlns="http://ciax.sum.naoj.org/ciax-xml/wdb" interval="0.2">
          <event label="ON Executed 1" id="on1">
            <onchange var="xsw0"/>
            <pattern var="xsw0">1</pattern>
            <pattern var="xsw1">0</pattern>
            <exec name="x1on"/>
          </event>
          <event label="ON Executed 2" id="on2">
            <onchange var="xsw1"/>
            <pattern var="xsw1">1</pattern>
            <pattern var="xsw2">0</pattern>
            <exec name="x2on"/>
          </event>
          <event label="ON Executed 3" id="on3">
            <onchange var="xsw2"/>
            <pattern var="xsw2">1</pattern>
            <pattern var="xsw3">0</pattern>
            <exec name="x3on"/>
          </event>
          <event label="OFF Executed 1" id="off1">
            <onchange var="xsw0"/>
            <pattern var="xsw0">0</pattern>
            <pattern var="xsw1">1</pattern>
            <exec name="x1off"/>
          </event>
          <event label="OFF Executed 2" id="off2">
            <onchange var="xsw1"/>
            <pattern var="xsw1">0</pattern>
            <pattern var="xsw2">1</pattern>
            <exec name="x2off"/>
          </event>
          <event label="OFF Executed 3" id="off3">
            <onchange var="xsw2"/>
            <pattern var="xsw2">0</pattern>
            <pattern var="xsw3">1</pattern>
            <exec name="x3off"/>
          </event>
        </watch>
      </site>
      <site id="tst" dev_id="tst" app_id="ist" host="localhost" port="53051" label="Current Instrument">
        <command ref="ist"/>
      </site>
      <site id="tts" dev_id="tts" app_id="oss" host="localhost" port="25195" label="OSS Telescope"/>
    </group>
  </project>
</idb>
