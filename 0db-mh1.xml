<?xml version="1.0" encoding="iso-8859-1"?>
<odb xsi:schemaLocation="http://ciax.sum.naoj.org/ciax-xml/schema/odb.xsd" xmlns="http://ciax.sum.naoj.org/ciax-xml/odb" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <object id="mh1" label="MOIRCS Ext Heater 1">
    <comm>
      <device>psp</device>
      <client>socat - tcp:merope:59999</client>
      <server>socat - udp-l:24201,reuseaddr,fork</server>
    </comm>
    <selection>
      <session id="upd" label="Update Status">
        <statement>
          <text>getstat</text>
        </statement>
      </session>
      <session id="setlmt" label="Set Limit 20V/5A/100W">
        <statement>
          <text>setvl 20</text>
        </statement>
        <statement>
          <text>setal 5</text>
        </statement>
        <statement>
          <text>setpl 100</text>
        </statement>
        <statement>
          <text>getstat</text>
        </statement>
      </session>
      <session id="setv" label="Set Voltage 0-50[V]">
        <parameters>
          <par>
            <range>0:50</range>
          </par>
        </parameters>
        <statement>
          <text>setv $1</text>
        </statement>
        <statement>
          <text>getstat</text>
        </statement>
      </session>
      <session id="setp" label="Set Power 0-100[W]">
        <parameters>
          <par>
            <range>0:100</range>
          </par>
        </parameters>
        <statement>
          <text>setv</text>
          <formula format="%5.2f">Math.sqrt($1*26)</formula>
        </statement>
        <statement>
          <text>getstat</text>
        </statement>
      </session>
    </selection>
    <status>
      <group>
        <var id="vol" label="OUTPUT (V)">
          <value format="%3.2f">
            <float>v</float>
          </value>
        </var>
        <var id="amp" label="OUTPUT (A)">
          <value format="%3.2f">
            <float>a</float>
          </value>
        </var>
        <var id="wat" label="OUTPUT (W)">
          <value format="%3.2f">
            <float>w</float>
          </value>
        </var>
      </group>
      <group>
        <var id="vl" label="Limit (V)">
          <value format="%3.2f">
            <float>u</float>
          </value>
        </var>
        <var id="il" label="Limit (A)">
          <value format="%3.2f">
            <float>i</float>
          </value>
        </var>
        <var id="pl" label="Limit (W)">
          <value format="%3.2f">
            <float>p</float>
          </value>
        </var>
      </group>
      <group>
        <var id="sw" label="OUTPUT ON/OFF" symbol="warn">
          <value format="%s">
            <string>f1</string>
          </value>
        </var>
        <var id="tmp" label="OverHeat" symbol="alarm">
          <value format="%s">
            <string>f2</string>
          </value>
        </var>
      </group>
      <group>
        <var id="kn1" label="Wheel Knov Fine" symbol="normal">
          <value format="%s">
            <string>f3</string>
          </value>
        </var>
        <var id="kn2" label="Wheel Knov Unlock" symbol="normal">
          <value format="%s">
            <string>f4</string>
          </value>
        </var>
      </group>
      <group>
        <var id="rem" label="REMOTE" symbol="normal">
          <value format="%s">
            <string>f5</string>
          </value>
        </var>
        <var id="loc" label="Local Lock" symbol="normal">
          <value format="%s">
            <string>f6</string>
          </value>
        </var>
      </group>
    </status>
  </object>
</odb>
