<?xml version="1.0" encoding="utf-8"?>
<cdb xmlns="http://ciax.sum.naoj.org/ciax-xml/cdb">
  <app frame="oss" id="oss" label="TSC Control">
    <commands xmlns="http://ciax.sum.naoj.org/ciax-xml/cdbc">
      <cmdset id="upd" label="Update Status">
        <command name="logstat" />
        <command name="getstat" />
        <command name="iststat" />
        <command name="jakstat" />
        <command name="inrstat" />
      </cmdset>
      <cmdset id="login" label="Login">
        <command name="login" />
        <command name="logstat" />
      </cmdset>
      <cmdset id="logout" label="Logout">
        <command name="logout" />
        <command name="logstat" />
      </cmdset>
      <cmdset id="init" label="Start TCP Status Request">
        <command name="init" />
      </cmdset>
      <cmdset id="startup" label="Start Up CIAX operation">
        <command name="login" />
        <command name="tsconly" label="TSC Only Mode(CIAX Mode)" />
        <command name="ron" />
        <command name="jon" />
      </cmdset>
      <cmdset id="shutdown" label="Shutdown CIAX operation">
        <command name="joff" />
        <command name="roff" />
        <command name="tscpri" label="TSC Primaly Mode" />
        <command name="logout" />
      </cmdset>
      <cmdset id="rhook" label="InR Hook">
        <command name="rhook" />
        <command name="inrstat" />
      </cmdset>
      <cmdset id="runhk" label="InR UnHook">
        <command name="runhk" />
        <command name="inrstat" />
      </cmdset>
      <cmdset id="rstop" label="InR Stop">
        <command name="rstop" />
        <command name="inrstat" />
      </cmdset>
      <cmdset id="jup" label="All EJB Up">
        <command name="ajup" />
        <command name="jakstat" />
      </cmdset>
      <cmdset id="jdw" label="All EJB Down">
        <command name="ajdw" />
        <command name="jakstat" />
      </cmdset>
      <cmdset id="jstop" label="All EJB Stop">
        <command name="jstop" />
        <command name="jakstat" />
      </cmdset>
      <cmdset id="moircs" label="Set IID MOIRCS">
        <command name="setinst">
          <argv>12</argv>
        </command>
        <command name="iststat" />
      </cmdset>
      <cmdset id="focas" label="Set IID FOCAS">
        <command name="setinst">
          <argv>5</argv>
        </command>
        <command name="iststat" />
      </cmdset>
      <cmdset id="comics" label="Set IID COMICS">
        <command name="setinst">
          <argv>7</argv>
        </command>
        <command name="iststat" />
      </cmdset>
    </commands>
    <status xmlns="http://ciax.sum.naoj.org/ciax-xml/cdbs" table="oss">
      <group id="g1" label="Main">
        <row>
          <value id="exit" label="Exit Code">
            <int ref="exit" />
          </value>
          <value id="nfb" label="BOLT NFB TRIP">
            <binary bit="6" ref="bstat" />
          </value>
        </row>
        <row>
          <value id="rts" label="ROT SEL" symbol="rts">
            <int ref="rsel" />
          </value>
          <value id="iid" label="CAS INST ID" symbol="iid">
            <int ref="iid" />
          </value>
          <value id="login" label="Login Status" symbol="login">
            <string ref="login0" />
            <string ref="login1" />
            <string ref="login2" />
            <string ref="login3" />
          </value>
        </row>
      </group>
      <group id="g2" label="Drive Stat">
        <row>
          <value id="azd" label="AZ" symbol="drv">
            <binary label="ON" bit="0" ref="teldrive" />
            <binary label="OFF" bit="1" ref="teldrive" />
            <binary label="Ready" bit="2" ref="teldrive" />
          </value>
          <value id="eld" label="EL" symbol="drv">
            <binary label="ON" bit="3" ref="teldrive" />
            <binary label="OFF" bit="4" ref="teldrive" />
            <binary label="Ready" bit="5" ref="teldrive" />
          </value>
          <value id="rpw" label="ROT" symbol="rpw">
            <int ref="rpw" />
          </value>
          <value id="jpw" label="JAK" symbol="warn">
            <binary bit="7" ref="bstat" />
          </value>
        </row>
      </group>
      <group id="g3" label="Position">
        <row>
          <value id="stw" label="EL STOW" symbol="off-warn">
            <binary bit="2" ref="stow_1" />
          </value>
          <value id="elv" label="EL">
            <float ref="el" format="%.3f" />
          </value>
          <value id="rps" label="ROT SENSOR" symbol="rps">
            <binary bit="4" ref="bstat" />
            <binary bit="5" ref="bstat" />
          </value>
          <value id="iang" label="InR">
            <float ref="iang" format="%.3f" />
          </value>
        </row>
      </group>
      <group id="g4" label="[Moving] [Stat(Anc,Rdy)] [Pos] [Jack Len]  [Clnt Lmt] [Alm]">
        <row label="JACK ALL">
          <value id="abm" label="All" symbol="warn">
            <binary ref="abs" bit="2" inv="true" />
          </value>
          <value id="abs" label="All">
            <binary ref="abs" bit="0" />
            <binary ref="abs" bit="4" />
          </value>
        </row>
        <repeat from="1" to="16">
          <row label="JACK EACH">
            <!--Order:2,1,4,3,6,5...-->
            <value id="bm%02d" label="%02d" symbol="warn">
              <binary ref="bs:$_-2-($_%2)*2" bit="2" inv="true" />
            </value>
            <value id="bs%02d" label="%02d">
              <binary ref="bs:$_-2-($_%2)*2" bit="0" />
              <binary ref="bs:$_-2-($_%2)*2" bit="4" />
            </value>
            <value id="bl%02d" label="%02d" symbol="bl">
              <binary ref="bl:$_-2-($_%2)*2" bit="1" />
              <binary ref="bl:$_-2-($_%2)*2" bit="2" />
            </value>
            <value id="jk%02d" label="%02d">
              <float ref="jk:$_-2-($_%2)*2" formula="$#/100" format="%5.2f" />
            </value>
            <value id="cl%02d" label="%02d" symbol="normal">
              <binary ref="clm:1-($_-1)/8" bit="($_-1)%8" />
            </value>
            <value id="ba%02d" label="%02d" symbol="ba">
              <binary ref="bl:$_-2-($_%2)*2" bit="0" />
              <binary ref="bl:$_-2-($_%2)*2" bit="4" />
            </value>
          </row>
        </repeat>
      </group>
      <group id="g5" label="[Z Sensor Len]">
        <row>
          <repeat from="1" to="4">
            <value id="z%d" label="%d">
              <float ref="zp:$_-1" formula="$#/100" format="%5.2f" />
            </value>
          </repeat>
        </row>
      </group>
    </status>
    <watch interval="1" xmlns="http://ciax.sum.naoj.org/ciax-xml/wdb">
      <while label="Moving Jack" blocking="jup|jdw">
        <condition>
          <value ref="abm">1</value>
        </condition>
        <interrupt name="jstop" />
        <command name="jakstat" />
        <command name="getexit" />
        <command name="getpid" />
      </while>
      <onchange label="Moving InR" blocking="rhook|runhk">
        <condition>
          <value ref="iang"></value>
        </condition>
        <interrupt name="rstop" />
        <command name="inrstat" />
        <command name="getexit" />
        <command name="getpid" />
      </onchange>
    </watch>
  </app>
</cdb>
