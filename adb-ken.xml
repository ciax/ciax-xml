<?xml version="1.0" encoding="utf-8"?>
<adb xmlns="http://ciax.sum.naoj.org/ciax-xml/adb">
  <app frm_id="ken" id="ken" label="Kenwood Power Supply">
    <commands xmlns="http://ciax.sum.naoj.org/ciax-xml/adbc">
      <group id="g0" caption="Device">
        <item id="upd" label="Update Status">
          <repeat from="0" to="2" counter="c">
            <frmcmd name="getst0">
              <argv>$c</argv>
              <argv>($c&amp;1)*2+2</argv>
            </frmcmd>
            <frmcmd name="ack"/>
          </repeat>
        </item>
        <item id="getconf" label="Get Config Data">
          <repeat from="0" to="2" counter="c">
            <frmcmd name="getst1">
              <argv>$c</argv>
              <argv>($c&amp;1)*2+2</argv>
            </frmcmd>
            <frmcmd name="ack"/>
          </repeat>
          <repeat from="0" to="2" counter="c">
            <frmcmd name="getst2">
              <argv>$c</argv>
              <argv>($c&amp;1)*2+2</argv>
            </frmcmd>
            <frmcmd name="ack"/>
          </repeat>
          <repeat from="0" to="2" counter="c">
            <frmcmd name="getst3">
              <argv>$c</argv>
            </frmcmd>
            <frmcmd name="ack"/>
          </repeat>
        </item>
      </group>
    </commands>
    <status xmlns="http://ciax.sum.naoj.org/ciax-xml/adbs" symtbl="ken">
      <repeat_grp from="0" to="2" counter="c">
        <group id="gs$c" caption="UNIT $c STAT" column="4">
          <integer id="model$c" label="Model" symbol="model">
            <field ref="ms3" index="$c"/>
          </integer>
          <integer id="disp$c" label="Display" symbol="disp">
            <field ref="ms2" index="$c:0"/>
          </integer>
          <integer id="main$c" label="Main Output" symbol="action">
            <field ref="ms2" index="$c:1"/>
          </integer>
          <integer id="tr$c" label="Tracking" symbol="action">
            <field ref="ms2" index="$c:3"/>
          </integer>
          <integer id="trm$c" label="Traking Mode" symbol="tmode">
            <field ref="ms2" index="$c:5"/>
          </integer>
          <integer id="pre$c" label="Preset Sel">
            <field ref="ms2" index="$c:6"/>
          </integer>
          <integer id="dly$c" label="Delay" symbol="action">
            <field ref="ms2" index="$c:7"/>
          </integer>
        </group>
      </repeat_grp>
      <repeat_grp from="0" to="2" counter="u">
        <group id="gu$u" caption="Output $u" column="3">
          <repeat_var from="0" to="($u&amp;1)*2+1" counter="c">
            <float id="v$u$c" label="Voltage(V) CH$c" format="%5.2f" formula="$#/100">
              <field ref="ms0" index="$u:$c:0" />
            </float>
            <float id="i$u$c" label="Current(A) CH$c" format="%5.2f" formula="$#/100">
              <field ref="ms0" index="$u:$c:1" />
            </float>
            <string id="s$u$c" label="Mode CH$c" symbol="cmode">
              <field ref="st0" index="$u:$c"/>
            </string>
          </repeat_var>
        </group>
      </repeat_grp>
      <repeat_grp from="0" to="1" counter="c">
        <group id="gp1$c" caption="Preset UNIT A $cCH" column="4">
          <repeat_var from="0" to="3" counter="p">
            <float id="pv0$c$p" label="#$p (V)" format="%5.2f" formula="$#/100">
              <field ref="ms1" index="0:$p:$c*2" />
            </float>
          </repeat_var>
          <repeat_var from="0" to="3" counter="p">
            <float id="pi0$c$p" label="#$p (A)" format="%5.2f" formula="$#/100">
              <field ref="ms1" index="0:$p:$c*2+1" />
            </float>
          </repeat_var>
        </group>
      </repeat_grp>
      <repeat_grp from="0" to="3" counter="c">
        <group id="gp2$c" caption="Preset UNIT B $cCH" column="4">
          <repeat_var from="0" to="3" counter="p">
            <float id="pv1$c$p" label="#$p (V)" format="%5.2f" formula="$#/100">
              <field ref="ms1" index="1:$p:$c*2" />
            </float>
          </repeat_var>
          <repeat_var from="0" to="3" counter="p">
            <float id="pi1$c$p" label="#$p (A)" format="%5.2f" formula="$#/100">
              <field ref="ms1" index="1:$p:$c*2+1" />
            </float>
          </repeat_var>
        </group>
      </repeat_grp>
      <repeat_grp from="0" to="1" counter="c">
        <group id="gp3$c" caption="Preset UNIT C $cCH" column="4">
          <repeat_var from="0" to="3" counter="p">
            <float id="pv2$c$p" label="#$p (V)" format="%5.2f" formula="$#/100">
              <field ref="ms1" index="2:$p:$c*2" />
            </float>
          </repeat_var>
          <repeat_var from="0" to="3" counter="p">
            <float id="pi2$c$p" label="#$p (A)" format="%5.2f" formula="$#/100">
              <field ref="ms1" index="2:$p:$c*2+1" />
            </float>
          </repeat_var>
        </group>
      </repeat_grp>
      <repeat_grp from="0" to="2" counter="u">
        <group id="gd$u" caption="Delay UNIT $u" column="4">
          <repeat_var from="0" to="($u&amp;1)*2+1" counter="c">
            <float id="dly$u$c" label="Delay $cCH(sec)" format="%5.2f" formula="$#/100">
              <field ref="dly2" index="$u:$c" />
            </float>
          </repeat_var>
        </group>
      </repeat_grp>
      <repeat_grp from="0" to="2" counter="u">
      <group id="gt$u" caption="Tracking UNIT $u" column="4">
        <repeat_var from="0" to="($u&amp;1)*2+1" counter="c">
          <float id="trv$u$c" label="Track $cCH(V)" format="%5.2f" formula="$#/100">
            <field ref="tr2" index="$u:$c*2" />
          </float>
          <float id="tri$u$c" label="Track $cCH(A)" format="%5.2f" formula="$#/100">
            <field ref="tr2" index="$u:$c*2+1" />
          </float>
        </repeat_var>
      </group>
      </repeat_grp>
    </status>
  </app>
</adb>
