<?xml version="1.0" encoding="utf-8"?>
<fdb xmlns="http://ciax.sum.naoj.org/ciax-xml/fdb">
  <frame id="mic" label="Piezo Motor(Micronix MMC-100)">
    <spec type="Piezo Motor" mfr="Micronix" model="MMC-100" reference="http://www.micronixusa.com/motion/assets/docs/manuals/MMC-100%20Manual%20Rev2.00.pdf"/>
    <stream wait="0.1" terminator="\n\r"/>
    <serial databit="8" flowctl="NONE" parity="NONE" speed="38400" stopbit="1"/>
    <cmdframe xmlns="http://ciax.sum.naoj.org/ciax-xml/fdbc">
      <body/>
      <char length="1">0xa</char>
      <char length="1">0xd</char>
    </cmdframe>
    <command xmlns="http://ciax.sum.naoj.org/ciax-xml/fdbc">
      <group id="gst" caption="Status">
        <!-- Status Commands -->
        <item id="getst" label="Get Status" response="getst" type="stat">
          <par_num>1:6</par_num>
          <string>$1</string>
          <string>STA?</string>
        </item>
        <item id="getp" label="Get position [1-6]" response="getp" type="stat">
          <par_num>1:6</par_num>
          <string>$1</string>
          <string>POS?</string>
        </item>
        <item id="geta" label="Get acceleration [1-6]" response="geta" type="stat">
          <par_num>1:6</par_num>
          <string>$1</string>
          <string>ACC?</string>
        </item>
      </group>
      <group id="gact" caption="Action">
        <!-- Motion Commands -->
        <item id="home" label="Move to Home position [1-6]" type="action">
          <par_num>1:6</par_num>
          <string>$1</string>
          <string>HOM</string>
        </item>
      </group>
    </command>
    <rspframe xmlns="http://ciax.sum.naoj.org/ciax-xml/fdbr">
      <string label="Prefix" length="1">#</string>
      <body/>
    </rspframe>
    <response xmlns="http://ciax.sum.naoj.org/ciax-xml/fdbr">
      <item id="getst">
        <string assign="st" index="$1-1" label="Status"/>
      </item>
      <item id="getp">
        <string assign="pos" index="$1-1,0:1" label="Position" delimiter=","/>
      </item>
      <item id="geta">
        <string assign="acc" index="$1-1" label="Acceleration"/>
      </item>
    </response>
    <field xmlns="http://ciax.sum.naoj.org/ciax-xml/fdbr">
      <array id="st" label="Status">
        <index size="6"/>
      </array>
      <array id="pos" label="Position">
        <index size="6"/>
        <index size="2"/>
      </array>
      <array id="acc" label="Acceleration">
        <index size="6"/>
      </array>
    </field>
  </frame>
</fdb>
