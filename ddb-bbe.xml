<?xml version="1.0" encoding="iso-8859-1"?>
<ddb xsi:schemaLocation="http://ciax.sum.naoj.org/ciax-xml/schema/ddb.xsd" xmlns="http://ciax.sum.naoj.org/ciax-xml/ddb" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <device id="bbe" label="BB Electric 232SDD16" wait="0.3">
    <serial databit="8" flowctl="NONE" parity="NONE" speed="9600" stopbit="1" />
    <cmdselect>
      <command id="getstat" label="Get Status" response="getstat" type="stat">
        <data>RD</data>
      </command>
      <command id="defio" label="DEFINE IN/OUT" type="config">
        <data>SD</data>
        <data encode="bew" label="msb">0x1111</data>
      </command>
      <command id="output" label="OUTPUT [DDDDD]" type="action">
        <parameters>
          <par label="[0-65535]">
            <range>0:65535</range>
          </par>
        </parameters>
        <data>SO</data>
        <formula encode="bew">$1</formula>
      </command>
      <command id="outfld" label="OUTPUT from Field" type="action" nocache="true">
        <data>SO</data>
        <formula encode="bew">${stat}</formula>
      </command>
    </cmdselect>
    <cmdframe>
      <data label="Prefix">!0</data>
      <selected />
    </cmdframe>
    <rspselect>
      <response id="getstat">
        <field assign="stat" decode="bew"></field>
      </response>
    </rspselect>
    <rspframe>
      <selected />
    </rspframe>
  </device>
</ddb>
