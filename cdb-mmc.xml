<?xml version="1.0" encoding="utf-8"?>
<cdb xmlns="http://ciax.sum.naoj.org/ciax-xml/cdb">
  <app frm_type="slo" id="mmc" label="MOIRCS Carrousel">
    <commands xmlns="http://ciax.sum.naoj.org/ciax-xml/cdbc">
      <cmdset id="upd" label="Update Status">
        <command name="getstat" />
        <command name="bs" />
        <command name="p" />
        <command name="spd" />
        <repeat from="1" to="5">
          <command name="in">
            <argv>$_</argv>
          </command>
        </repeat>
      </cmdset>
      <cmdset id="reset" label="Reset">
        <command name="reset" />
      </cmdset>
      <cmdset id="defcon" label="Default Config">
        <command name="hl">
          <argv>0</argv>
        </command>
        <command name="e1">
          <argv>0</argv>
        </command>
        <command name="e2">
          <argv>0</argv>
        </command>
        <command name="setspd">
          <argv>0.2</argv>
        </command>
      </cmdset>
      <cmdset id="cwini" label="Goto CW Limit">
        <command name="jp" />
      </cmdset>
      <cmdset id="cwhome" label="Goto Home from CW Limit">
        <command name="mi">
          <argv>-0.41</argv>
        </command>
      </cmdset>
      <cmdset id="cwset0" label="Set 0 at S00">
        <command name="set0" />
      </cmdset>
      <cmdset id="cw" label="Move CW [1-5]">
        <command name="mi">
          <argv valid="1:5">$1</argv>
        </command>
      </cmdset>
      <cmdset id="ccw" label="Move CCW [1-5]">
        <command name="mi">
          <argv valid="1:5">-$1</argv>
        </command>
      </cmdset>
      <cmdset id="slot" label="Move to Slot [0-23]">
        <command name="ma">
          <argv valid="0:23">-$1</argv>
        </command>
      </cmdset>
      <cmdset id="access" label="Move to Access [0-23]">
        <command name="ma">
          <argv format="%d" valid="0:23">$1&gt;18?-$1+18:-$1-6</argv>
        </command>
      </cmdset>
    </commands>
    <status xmlns="http://ciax.sum.naoj.org/ciax-xml/cdbs" table="mmc">
      <row label="Group">
        <value id="bs" label="Moter Moving" symbol="warn">
          <string ref="bs" />
        </value>
        <value id="con" label="Contact Sensor" symbol="normal">
          <string ref="in:1" />
        </value>
        <value id="spd" label="Speed">
          <float ref="spd" format="%.2f" />
        </value>
        <value id="err" label="Error Code" symbol="err">
          <int ref="err" />
        </value>
      </row>
      <row label="Group">
        <value id="lcw" label="CW Limit" symbol="normal">
          <string ref="in:3" />
        </value>
        <value id="lccw" label="CCW Limit" symbol="normal">
          <string ref="in:4" />
        </value>
        <value id="abs" label="ABS position" symbol="abs">
          <float ref="p" format="%.2f" />
        </value>
      </row>
    </status>
    <watch xmlns="http://ciax.sum.naoj.org/ciax-xml/wdb" interval="1">
      <while blocking="cw">
        <condition>
          <value ref="bs">1</value>
        </condition>
        <interrupt name="stop" />
        <command name="p"></command>
        <command name="in">
          <argv>1</argv>
        </command>
      </while>
    </watch>
  </app>
</cdb>
