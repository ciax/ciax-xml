<?xml version="1.0" encoding="utf-8"?>
<cdb xmlns="http://ciax.sum.naoj.org/ciax-xml/cdb">
  <app frame="psp" id="psp" label="MOIRCS Ext Heater">
    <commands xmlns="http://ciax.sum.naoj.org/ciax-xml/cdbc">
      <cmdset id="upd" label="Update Status">
        <command name="getstat" />
      </cmdset>
      <cmdset id="setlmt" label="Set Limit 20V/5A/100W">
        <command name="setvl">
          <argv>20</argv>
        </command>
        <command name="setal">
          <argv>5</argv>
        </command>
        <command name="setpl">
          <argv>100</argv>
        </command>
        <command name="getstat" />
      </cmdset>
      <cmdset id="setv" label="Set Voltage 0-50[V]">
        <command name="setv">
          <argv valid="0:50">$1</argv>
        </command>
        <command name="getstat" />
      </cmdset>
      <cmdset id="setp" label="Set Power 0-100[W]">
        <command name="setv">
          <argv format="%5.2f" valid="0:100">Math.sqrt($1*26)</argv>
        </command>
        <command name="getstat" />
      </cmdset>
    </commands>
    <status xmlns="http://ciax.sum.naoj.org/ciax-xml/cdbs">
      <row label="Group">
        <value id="vol" label="OUTPUT (V)">
          <float ref="v" format="%3.2f" />
        </value>
        <value id="amp" label="OUTPUT (A)">
          <float ref="a" format="%3.2f" />
        </value>
        <value id="wat" label="OUTPUT (W)">
          <float ref="w" format="%3.2f" />
        </value>
      </row>
      <row label="Group">
        <value id="vl" label="Limit (V)">
          <float ref="u" format="%3.2f" />
        </value>
        <value id="il" label="Limit (A)">
          <float ref="i" format="%3.2f" />
        </value>
        <value id="pl" label="Limit (W)">
          <float ref="p" format="%3.2f" />
        </value>
      </row>
      <row label="Group">
        <value id="sw" label="OUTPUT ON/OFF" symbol="warn">
          <string ref="f1" />
        </value>
        <value id="tmp" label="OverHeat" symbol="alarm">
          <string ref="f2" />
        </value>
        <value id="kn1" label="Wheel Knov Fine" symbol="normal">
          <string ref="f3" />
        </value>
        <value id="kn2" label="Wheel Knov Unlock" symbol="normal">
          <string ref="f4" />
        </value>
      </row>
      <row label="Group">
        <value id="rem" label="REMOTE" symbol="normal">
          <string ref="f5" />
        </value>
        <value id="loc" label="Local Lock" symbol="normal">
          <string ref="f6" />
        </value>
      </row>
    </status>
  </app>
</cdb>
