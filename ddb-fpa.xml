<?xml version='1.0' encoding='ISO-8859-1'?>
<ddb xsi:schemaLocation='http://ciax.sum.naoj.org/ciax-xml/schema/ddb.xsd' xmlns='http://ciax.sum.naoj.org/ciax-xml/ddb' xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'>
  <device id='fpa' label='Field Point Analog Input(FP-AI-100)' reference='http://ciax.sum.naoj.org/man/fieldpoint/fp-1000prm-321632c.pdf' wait='0'>
    <serial databit='8' flowctl='NONE' parity='NONE' speed='115200' stopbit='1'/>
    <cmdselect>
      <!--String Length must be <32-->
      <command id='getstat' label='Get status' response='getstat' type='stat'>
        <data type='text'>!F00FF</data>
      </command>
      <command id='setr1' label='Set range +-1.2V' response='default' type='config'>
        <data type='text'>!D00FF</data>
        <repeat from='1' to='8'>
          <data type='text'>0000107</data>
        </repeat>
      </command>
      <command id='setr6' label='Set range +-6V' response='default' type='config'>
        <data type='text'>!D00FF</data>
        <repeat from='1' to='8'>
          <data type='text'>0000105</data>
        </repeat>
      </command>
      <command id='setr15' label='Set range +-15V' response='default' type='config'>
        <data type='text'>!D00FF</data>
        <repeat from='1' to='8'>
          <data type='text'>0000112</data>
        </repeat>
      </command>
    </cmdselect>
    <cmdframe>
      <data label='Prefix' type='text'>&gt;01</data>
      <selected/>
      <data type='text'>??</data>
      <data encode='chr' type='text'>13</data>
      <data encode='chr' type='text'>10</data>
    </cmdframe>
    <rspselect>
      <response id='getstat'>
        <array assign='stat' decode='hexstr' label='Status' length='4'>
          <index range='0:7' size='8'/>
        </array>
      </response>
      <response id='default'/>
    </rspselect>
    <rspframe>
      <field label='Prefix' length='1' verify='A'/>
      <rspccrange method='sum'>
        <selected/>
      </rspccrange>
      <field assign='cc' decode='hexstr' label='BCC' length='2'/>
    </rspframe>
  </device>
</ddb>
