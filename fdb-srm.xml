<?xml version="1.0" encoding="utf-8"?>
<fdb xmlns="http://ciax.sum.naoj.org/ciax-xml/fdb">
  <frame id="srm" version="1" label="OMRON SRM1">
    <stream ccmethod="bcc" wait="0.3" terminator="\r"/>
    <serial databit="7" flowctl="NONE" parity="EVEN" speed="9600" stopbit="1"/>
    <cmdframe xmlns="http://ciax.sum.naoj.org/ciax-xml/fdbc">
      <ccrange>
        <string label="Prefix">@</string>
        <string label="Device No.">00</string>
        <body/>
      </ccrange>
      <string format="%02X">${cc}</string>
      <string label="Suffix">*</string>
      <char length="1" label="Delimiter">0xd</char>
    </cmdframe>
    <command xmlns="http://ciax.sum.naoj.org/ciax-xml/fdbc">
      <group id="gst" caption="Status">
        <item id="getmodel" label="Get Model Code" response="getmodel" type="stat">
          <string label="Header Code">MM</string>
        </item>
        <item id="getstat" label="Get Status" response="getstat" type="stat">
          <string label="Header Code">RR</string>
          <string label="Start Channel">0000</string>
          <string label="length">0001</string>
        </item>
      </group>
      <group id="gact" caption="Action">
        <item id="fset" label="Multiple Forced Set [D*16]" response="fset" type="action">
          <par_num>0:500000</par_num>
          <string label="Header Code">FK</string>
          <string label="Operand">CIO </string>
          <string label="Channel">0000</string>
          <!--[000..04(5)]-->
          <string format="%016d">$1</string>
        </item>
      </group>
    </command>
    <rspframe xmlns="http://ciax.sum.naoj.org/ciax-xml/fdbr">
      <ccrange>
        <string label="Prefix">@</string>
        <body/>
      </ccrange>
      <hexstr assign="cc" label="BCC" length="2"/>
      <string label="Terminater">*</string>
    </rspframe>
    <response xmlns="http://ciax.sum.naoj.org/ciax-xml/fdbr">
      <item id="getmodel">
        <string label="Command Code">00MM</string>
        <string label="Response Code" length="2" assign="cod"/>
        <string assign="model" label="Model Number" length="2"/>
      </item>
      <item id="getstat">
        <string label="Command Code">00RR</string>
        <string label="Response Code" length="2" assign="cod"/>
        <!--Big endian-->
        <string assign="c1d3" label="CH1 bit12-15" length="1"/>
        <string assign="c1d2" label="CH1 bit8-11" length="1"/>
        <string assign="c1d1" label="CH1 bit4-7" length="1"/>
        <string assign="c1d0" label="CH1 bit0-3" length="1"/>
      </item>
      <item id="fset">
        <string label="Command Code">00FK</string>
        <string label="Exit Code" length="2" assign="cod"/>
      </item>
    </response>
    <field xmlns="http://ciax.sum.naoj.org/ciax-xml/fdbr">
      <var id="cc" label="BCC"/>
      <var id="cod" label="Response Code"/>
      <var id="model" label="Model Number"/>
      <!--Big endian-->
      <var id="c1d3" label="CH1 bit12-15"/>
      <var id="c1d2" label="CH1 bit8-11"/>
      <var id="c1d1" label="CH1 bit4-7"/>
      <var id="c1d0" label="CH1 bit0-3"/>
    </field>
  </frame>
</fdb>
