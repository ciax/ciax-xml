<?xml version="1.0" encoding="utf-8"?>
<adb xmlns="http://ciax.sum.naoj.org/ciax-xml/adb">
  <app frm_type="slo" id="mmc" label="MOIRCS Carrousel">
    <commands xmlns="http://ciax.sum.naoj.org/ciax-xml/adbc">
      <command id="upd" label="Update Status">
        <frmcmd name="getstat" />
        <frmcmd name="bs" />
        <frmcmd name="p" />
        <frmcmd name="spd" />
        <repeat from="1" to="5">
          <frmcmd name="in">
            <argv>$_</argv>
          </frmcmd>
        </repeat>
      </command>
      <command id="reset" label="Reset">
        <frmcmd name="reset" />
      </command>
      <command id="defcon" label="Default Config">
        <frmcmd name="hl">
          <argv>0</argv>
        </frmcmd>
        <frmcmd name="e1">
          <argv>0</argv>
        </frmcmd>
        <frmcmd name="e2">
          <argv>0</argv>
        </frmcmd>
        <frmcmd name="setspd">
          <argv>0.2</argv>
        </frmcmd>
      </command>
      <command id="cwini" label="Goto CW Limit">
        <frmcmd name="jp" />
      </command>
      <command id="cwhome" label="Goto Home from CW Limit">
        <frmcmd name="mi">
          <argv>-0.41</argv>
        </frmcmd>
      </command>
      <command id="cwset0" label="Set 0 at S00">
        <frmcmd name="set0" />
      </command>
      <command id="cw" label="Move CW [1-5]">
        <par>1:5</par>
        <frmcmd name="mi">
          <argv>$1</argv>
        </frmcmd>
      </command>
      <command id="ccw" label="Move CCW [1-5]">
        <par>1:5</par>
        <frmcmd name="mi">
          <argv>-$1</argv>
        </frmcmd>
      </command>
      <command id="slot" label="Move to Slot [0-23]">
        <par>0:23</par>
        <frmcmd name="ma">
          <argv>-$1</argv>
        </frmcmd>
      </command>
      <command id="access" label="Move to Access [0-23]">
        <par>0:23</par>
        <frmcmd name="ma">
          <argv format="%d">$1&gt;18?-$1+18:-$1-6</argv>
        </frmcmd>
      </command>
      <command id="updp" label="Update Pulse" hidden="true">
        <frmcmd name="p" />
        <frmcmd name="in">
          <argv>1</argv>
        </frmcmd>
      </command>
      <command id="stop" label="Stop Run" hidden="true">
        <frmcmd name="stop" />
      </command>
    </commands>
    <status xmlns="http://ciax.sum.naoj.org/ciax-xml/adbs" table="mmc">
      <group id="g1" caption="" column="4">
        <value id="bs" label="Moter Moving" symbol="warn">
          <string ref="bs" />
        </value>
        <value id="con" label="Contact Sensor" symbol="normal">
          <string ref="in" index="1" />
        </value>
        <value id="spd" label="Speed" format="%.2f">
          <float ref="spd" />
        </value>
        <value id="err" label="Error Code" symbol="err">
          <int ref="err" />
        </value>
        <value id="lcw" label="CW Limit" symbol="normal">
          <string ref="in" index="3" />
        </value>
        <value id="lccw" label="CCW Limit" symbol="normal">
          <string ref="in" index="4" />
        </value>
        <value id="abs" label="ABS position" symbol="abs" format="%.2f">
          <float ref="p" />
        </value>
      </group>
    </status>
    <watch xmlns="http://ciax.sum.naoj.org/ciax-xml/wdb" interval="1">
      <event id="mot" label="On Motion">
        <pattern var="bs">1</pattern>
        <block name="cw" />
        <int name="stop" />
        <exec name="updp"></exec>
      </event>
    </watch>
  </app>
</adb>