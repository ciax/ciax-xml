<?xml version="1.0" encoding="utf-8"?>
<adb xmlns="http://ciax.sum.naoj.org/ciax-xml/adb">
  <app frm_id="srm" id="srm" label="CsEtr Controller" version="1">
    <commands xmlns="http://ciax.sum.naoj.org/ciax-xml/adbc">
      <group id="g0" caption="Device">
        <item id="upd" label="Update Status">
          <frmcmd name="getstat" />
        </item>
        <item id="c3on" label="CIAX3 POWER ON">
          <frmcmd name="fset" label="Bit 0 on">
            <argv>5</argv>
          </frmcmd>
        </item>
        <item id="c3off" label="CIAX3 POWER OFF">
          <frmcmd name="fset" label="Bit 0 OFF">
            <argv>4</argv>
          </frmcmd>
        </item>
        <item id="emon" label="CIAX3 EMERGENCY ON">
          <frmcmd name="fset" label="Bit 1 ON">
            <argv>50</argv>
          </frmcmd>
        </item>
        <item id="emoff" label="CIAX3 EMERGENCY OFF">
          <frmcmd name="fset" label="Bit 1 OFF">
            <argv>40</argv>
          </frmcmd>
        </item>
        <item id="ccdon" label="CS CCD ON">
          <frmcmd name="fset" label="Bit 2 ON">
            <argv>500</argv>
          </frmcmd>
        </item>
        <item id="ccdoff" label="CS CCD OFF">
          <frmcmd name="fset" label="Bit 2 OFF">
            <argv>400</argv>
          </frmcmd>
        </item>
        <item id="lanon" label="CS LAN ON">
          <frmcmd name="fset" label="Bit 3 ON">
            <argv>5000</argv>
          </frmcmd>
        </item>
        <item id="lanoff" label="CS LAN OFF">
          <frmcmd name="fset" label="Bit 3 OFF">
            <argv>4000</argv>
          </frmcmd>
        </item>
        <item id="ipwon" label="CS IPW ON">
          <frmcmd name="fset" label="Bit 4 ON">
            <argv>50000</argv>
          </frmcmd>
        </item>
        <item id="ipwoff" label="CS IPW OFF">
          <frmcmd name="fset" label="Bit 4 OFF">
            <argv>40000</argv>
          </frmcmd>
        </item>
        <item id="ston" label="STOW PIN ON">
          <frmcmd name="fset" label="Bit 5 ON">
            <argv>500000</argv>
          </frmcmd>
        </item>
        <item id="stoff" label="STOW PIN OFF">
          <frmcmd name="fset" label="Bit 5 OFF">
            <argv>400000</argv>
          </frmcmd>
        </item>
      </group>
    </commands>
    <status xmlns="http://ciax.sum.naoj.org/ciax-xml/adbs" symtbl="srm">
      <group id="g1" caption="" column="3">
        <string id="cod" label="RESPONSE CODE" symbol="cod">
          <field ref="cod" />
        </string>
        <string id="iid" label="CAS INST ID" symbol="iid_ac">
          <field ref="c1d2" />
        </string>
        <binary id="ipw" label="CAS IPW" symbol="off_warn">
          <field bit="0" ref="c1d1" />
        </binary>
        <binary id="stp" label="STOW PIN" symbol="warn">
          <field bit="1" ref="c1d1" />
        </binary>
        <binary id="ccd" label="CAS CCD PW" symbol="warn">
          <field bit="2" ref="c1d0" />
        </binary>
        <binary id="lan" label="CAS LAN PW" symbol="hide">
          <field bit="3" ref="c1d0" />
        </binary>
        <binary id="c3p" label="CIAX3 PW" symbol="hide">
          <field bit="0" ref="c1d0" />
        </binary>
        <binary id="c3e" label="CIAX3 EMG" symbol="alarm">
          <field bit="1" ref="c1d0" />
        </binary>
      </group>
    </status>
  </app>
</adb>
