<?xml version="1.0" encoding="utf-8"?>
<adb xmlns="http://ciax.sum.naoj.org/ciax-xml/adb">
  <app frm_id="mel" id="mel" label="Cart PLC" version="8">
    <command xmlns="http://ciax.sum.naoj.org/ciax-xml/adbc">
      <group id="gsys" caption="System Commands" column="2">
        <item id="upd" label="Status update">
          <frmcmd name="getstat"/>
          <frmcmd name="getcmd"/>
        </item>
        <unit id="ustop" label="Stop">
          <item id="emstop" label="Emergency Stop">
            <frmcmd name="int">
              <argv>1</argv>
            </frmcmd>
            <frmcmd name="clr_int"/>
            <frmcmd name="getstat"/>
          </item>
          <item id="pause" label="Pause Action">
            <frmcmd name="int">
              <argv>0</argv>
            </frmcmd>
            <frmcmd name="clr_int"/>
            <frmcmd name="clr_act"/>
            <frmcmd name="getcmd"/>
            <frmcmd name="getstat"/>
          </item>
          <item id="cancel" label="Command Cancel">
            <frmcmd name="int">
              <argv>4</argv>
            </frmcmd>
            <frmcmd name="clr_int"/>
            <frmcmd name="getstat"/>
          </item>
          <item id="cstop" label="Stop at Next Tag">
            <frmcmd name="int">
              <argv>7</argv>
            </frmcmd>
            <frmcmd name="clr_int"/>
            <frmcmd name="getstat"/>
          </item>
        </unit>
        <unit id="urec" label="Recovery">
          <item id="ready" label="Ready mode">
            <frmcmd name="int">
              <argv>6</argv>
            </frmcmd>
            <frmcmd name="getcmd"/>
            <frmcmd name="getstat"/>
          </item>
          <item id="clear" label="Clear Error">
            <frmcmd name="int">
              <argv>5</argv>
            </frmcmd>
            <frmcmd name="clr_int"/>
            <frmcmd name="getstat"/>
          </item>
          <item id="resume" label="Resume from Pause">
            <frmcmd name="int">
              <argv>5</argv>
            </frmcmd>
            <frmcmd name="clr_int"/>
            <frmcmd name="getstat"/>
          </item>
          <item id="rescmd" label="Reset Cmd Flag" hidden="true">
            <frmcmd name="clr_act"/>
            <frmcmd name="getcmd"/>
          </item>
        </unit>
      </group>
      <group id="gact" caption="Action Commands" column="2">
        <item id="run" label="Run to Tag [1-12]">
          <par_num>1:12</par_num>
          <frmcmd name="set_tag">
            <argv>$1</argv>
          </frmcmd>
          <frmcmd name="act">
            <argv>0</argv>
          </frmcmd>
          <frmcmd name="getcmd"/>
        </item>
        <unit id="unit_run" title="run[1-12]" label="Run to Tag">
          <item id="run1" label="1">
            <frmcmd name="set_tag">
              <argv>1</argv>
            </frmcmd>
            <frmcmd name="act">
              <argv>0</argv>
            </frmcmd>
            <frmcmd name="getcmd"/>
          </item>
          <item id="run2" label="2">
            <frmcmd name="set_tag">
              <argv>2</argv>
            </frmcmd>
            <frmcmd name="act">
              <argv>0</argv>
            </frmcmd>
            <frmcmd name="getcmd"/>
          </item>
          <item id="run3" label="3">
            <frmcmd name="set_tag">
              <argv>3</argv>
            </frmcmd>
            <frmcmd name="act">
              <argv>0</argv>
            </frmcmd>
            <frmcmd name="getcmd"/>
          </item>
          <item id="run7" label="7">
            <frmcmd name="set_tag">
              <argv>7</argv>
            </frmcmd>
            <frmcmd name="act">
              <argv>0</argv>
            </frmcmd>
            <frmcmd name="getcmd"/>
          </item>
          <item id="run8" label="8">
            <frmcmd name="set_tag">
              <argv>8</argv>
            </frmcmd>
            <frmcmd name="act">
              <argv>0</argv>
            </frmcmd>
            <frmcmd name="getcmd"/>
          </item>
          <item id="run9" label="9">
            <frmcmd name="set_tag">
              <argv>9</argv>
            </frmcmd>
            <frmcmd name="act">
              <argv>0</argv>
            </frmcmd>
            <frmcmd name="getcmd"/>
          </item>
          <item id="run10" label="10">
            <frmcmd name="set_tag">
              <argv>10</argv>
            </frmcmd>
            <frmcmd name="act">
              <argv>0</argv>
            </frmcmd>
            <frmcmd name="getcmd"/>
          </item>
          <item id="run11" label="11">
            <frmcmd name="set_tag">
              <argv>11</argv>
            </frmcmd>
            <frmcmd name="act">
              <argv>0</argv>
            </frmcmd>
            <frmcmd name="getcmd"/>
          </item>
          <item id="run12" label="12">
            <frmcmd name="set_tag">
              <argv>12</argv>
            </frmcmd>
            <frmcmd name="act">
              <argv>0</argv>
            </frmcmd>
            <frmcmd name="getcmd"/>
          </item>
        </unit>
        <unit id="unit_find" title="run[f/b]" label="Run find Tag">
          <item id="runf" label="Forward">
            <frmcmd name="set_tag">
              <argv>98</argv>
            </frmcmd>
            <frmcmd name="act">
              <argv>0</argv>
            </frmcmd>
            <frmcmd name="getcmd"/>
          </item>
          <item id="runb" label="Backword">
            <frmcmd name="set_tag">
              <argv>99</argv>
            </frmcmd>
            <frmcmd name="act">
              <argv>0</argv>
            </frmcmd>
            <frmcmd name="getcmd"/>
          </item>
        </unit>
        <unit id="unit_lftup" title="lftup[1-3]" label="Lift Up">
          <item id="lftup1" label="Low">
            <frmcmd name="set_pos">
              <argv>1</argv>
            </frmcmd>
            <frmcmd name="act">
              <argv>8</argv>
            </frmcmd>
            <frmcmd name="getcmd"/>
          </item>
          <item id="lftup2" label="Mid">
            <frmcmd name="set_pos">
              <argv>2</argv>
            </frmcmd>
            <frmcmd name="act">
              <argv>8</argv>
            </frmcmd>
            <frmcmd name="getcmd"/>
          </item>
          <item id="lftup3" label="High">
            <frmcmd name="set_pos">
              <argv>3</argv>
            </frmcmd>
            <frmcmd name="act">
              <argv>8</argv>
            </frmcmd>
            <frmcmd name="getcmd"/>
          </item>
        </unit>
        <!--        <unit id="unit_lftup" title="lftup[1-3]/dw/chg" label="Lift Level"> -->
        <unit id="unit_lfth" title="lft[dw/chg]" label="Lift Level">
          <item id="lftdw" label="Down">
            <frmcmd name="set_pos">
              <argv>0</argv>
            </frmcmd>
            <frmcmd name="act">
              <argv>8</argv>
            </frmcmd>
            <frmcmd name="getcmd"/>
          </item>
          <item id="lftchg" label="Charge">
            <frmcmd name="set_pos">
              <argv>4</argv>
            </frmcmd>
            <frmcmd name="act">
              <argv>8</argv>
            </frmcmd>
            <frmcmd name="getcmd"/>
          </item>
        </unit>
        <unit id="unit_chg" title="chg[on|off]" label="Charge ON/OFF">
          <item id="chgon" label="Start">
            <frmcmd name="act">
              <argv>15</argv>
            </frmcmd>
            <frmcmd name="getcmd"/>
          </item>
          <item id="chgoff" label="Stop">
            <frmcmd name="int">
              <argv format="%d">3</argv>
            </frmcmd>
            <frmcmd name="clr_int"/>
            <frmcmd name="getstat"/>
          </item>
        </unit>
      </group>
      <group id="gins" caption="Instrument Assign" column="2">
        <unit id="unit_ins" label="Instrument">
          <item id="comics" label="COMICS">
            <frmcmd name="set_ins">
              <argv>1</argv>
            </frmcmd>
            <frmcmd name="getstat"/>
          </item>
          <item id="ciao" label="CIAO">
            <frmcmd name="set_ins">
              <argv>2</argv>
            </frmcmd>
            <frmcmd name="getstat"/>
          </item>
          <item id="focas" label="FOCAS">
            <frmcmd name="set_ins">
              <argv>3</argv>
            </frmcmd>
            <frmcmd name="getstat"/>
          </item>
          <item id="moircs" label="MOIRCS">
            <frmcmd name="set_ins">
              <argv>4</argv>
            </frmcmd>
            <frmcmd name="getstat"/>
          </item>
          <item id="mcs" label="Meteorogy Box">
            <frmcmd name="set_ins">
              <argv>5</argv>
            </frmcmd>
            <frmcmd name="getstat"/>
          </item>
          <item id="swims" label="SWIMS">
            <frmcmd name="set_ins">
              <argv>6</argv>
            </frmcmd>
            <frmcmd name="getstat"/>
          </item>
        </unit>
      </group>
      <group id="gmtn" caption="Maintenance Commands" column="2">
        <item id="get_tbl" label="Get Jack Table">
          <frmcmd name="rw_tbl">
            <argv>1</argv>
          </frmcmd>
          <repeat counter="t" from="0" to="5">
            <repeat counter="j" from="0" to="3">
              <frmcmd name="get_tbl">
                <argv>$t</argv>
                <argv>$j</argv>
              </frmcmd>
            </repeat>
          </repeat>
        </item>
        <item id="set_tbl" label="Set Jack Table">
          <repeat counter="t" from="0" to="5">
            <repeat counter="j" from="0" to="3">
              <frmcmd name="set_tbl">
                <argv>$t</argv>
                <argv>$j</argv>
              </frmcmd>
            </repeat>
          </repeat>
          <frmcmd name="rw_tbl">
            <argv>0</argv>
          </frmcmd>
        </item>
      </group>
    </command>
    <status xmlns="http://ciax.sum.naoj.org/ciax-xml/adbs">
      <symtbl ref="mel"/>
      <group id="gs" caption="Status" column="3">
        <binary id="ctl" label="CONTROL" symbol="ctl_mode">
          <field ref="x" index="0" bit="14:15"/>
        </binary>
        <binary id="rdy" label="READY" symbol="off_alarm">
          <field ref="x" index="0" bit="0"/>
        </binary>
        <binary id="stp" label="STOPPING" symbol="off_warn">
          <field ref="x" index="0" bit="3"/>
        </binary>
        <binary id="pse" label="PAUSE" symbol="action">
          <field ref="x" index="0" bit="1"/>
        </binary>
        <binary id="emg" label="ENERGENCY" symbol="alarm">
          <field ref="x" index="0" bit="2"/>
        </binary>
        <integer id="exc" label="EXIT CODE" symbol="ecode" format="%04X">
          <field ref="ecode"/>
        </integer>
        <binary id="flt" label="Fault" symbol="alarm">
          <field ref="x" index="0" bit="7"/>
        </binary>
      </group>
      <group id="gt" caption="Trigger" column="4">
        <binary id="acp" label="CMD ENB" symbol="acp">
          <field label="Command Receive Enable" ref="x" index="32" bit="0"/>
        </binary>
        <binary id="isu" label="ISSUED" symbol="nonzero">
          <field ref="c" index="2" bit="0"/>
          <field ref="c" index="2" bit="8"/>
          <field ref="c" index="2" bit="15"/>
        </binary>
      </group>
      <group id="gins" caption="Instrument" column="2">
        <integer id="ist" label="ID" symbol="ist">
          <field ref="x" index="23"/>
        </integer>
        <binary id="ion" label="Loading" symbol="corn">
          <field ref="x" index="4" bit="8"/>
          <field ref="x" index="4" bit="9"/>
          <field ref="x" index="4" bit="10"/>
          <field ref="x" index="4" bit="11"/>
        </binary>
      </group>
      <group id="gact" caption="Motion Status" column="3">
        <binary id="run" label="RUNNING" symbol="action">
          <field ref="x" index="0" bit="4"/>
        </binary>
        <integer id="cps" label="Current Tag">
          <field ref="x" index="25"/>
        </integer>
        <integer id="dps" label="Destination Tag">
          <field ref="x" index="26"/>
        </integer>
        <binary id="jak" label="JACKING" symbol="action">
          <field ref="x" index="0" bit="5"/>
        </binary>
        <integer id="jlv" label="Jack Level" symbol="jlv">
          <field ref="x" index="27"/>
        </integer>
        <binary id="con" label="Corn" symbol="corn">
          <field ref="x" index="19" bit="5"/>
          <field ref="x" index="19" bit="13"/>
          <field ref="x" index="20" bit="5"/>
          <field ref="x" index="20" bit="13"/>
        </binary>
        <binary id="chg" label="CHARGING" symbol="action">
          <field ref="x" index="0" bit="6"/>
        </binary>
        <float id="vol" label="Battery(V)" symbol="bvl" format="%02.2f" formula="$#/100">
          <field ref="x" index="22"/>
        </float>
      </group>
      <group id="gmot" caption="Running Motor Stat" column="2">
        <binary id="msr" label="Servo R" symbol="action">
          <field ref="x" index="0" bit="8" inv="true"/>
        </binary>
        <float id="mdr" label="D/A R" formula="-$#">
          <field ref="x" index="7"/>
        </float>
        <binary id="msl" label="Servo L" symbol="action">
          <field ref="x" index="0" bit="9" inv="true"/>
        </binary>
        <float id="mdl" label="D/A L">
          <field ref="x" index="8"/>
        </float>
      </group>
      <group id="gjm" caption="Jacking Motor Stat" column="5">
        <repeat_var from="1" to="4">
          <binary id="js$_" label="SV $_" symbol="action">
            <field ref="x" index="0" bit="9+$_" inv="true"/>
          </binary>
          <float id="jh$_" label="H(mm) $_" formula="$#/100">
            <field ref="x" index="8+2*$_"/>
          </float>
          <binary id="cn$_" label="Corn $_" symbol="con">
            <field ref="x" index="19+($_-1)/2" bit="13-($_%2)*8"/>
          </binary>
          <integer id="ld$_" label="LD(Kgf) $_">
            <field ref="x" index="$_+47"/>
          </integer>
          <binary id="lc$_" label="LD(S) $_" symbol="load">
            <field ref="x" index="19+($_-1)/2" bit="8-($_%2)*8"/>
            <field ref="x" index="19+($_-1)/2" bit="9-($_%2)*8"/>
            <field ref="x" index="19+($_-1)/2" bit="10-($_%2)*8"/>
            <field ref="x" index="19+($_-1)/2" bit="11-($_%2)*8"/>
            <field ref="x" index="19+($_-1)/2" bit="12-($_%2)*8"/>
          </binary>
        </repeat_var>
      </group>
    </status>
    <watch xmlns="http://ciax.sum.naoj.org/ciax-xml/wdb" interval="1">
      <regular/>
      <event label="During Issued" id="isu">
        <range var="isu" inv="true">0</range>
        <exec name="upd"/>
      </event>
      <event label="Command Receive" id="rec">
        <range var="isu" inv="true">0</range>
        <range var="acp">0</range>
        <exec name="rescmd"/>
        <exec name="upd"/>
      </event>
      <event label="While Running" id="run">
        <range var="run">1</range>
        <block_grp ref="gact"/>
        <int name="pause"/>
        <exec name="upd"/>
      </event>
      <event label="Run End" id="rend">
        <onchange var="run"/>
        <range var="run">0</range>
        <exec name="upd"/>
      </event>
      <event label="While Jacking" id="jak">
        <range var="jak">1</range>
        <block_grp ref="gact"/>
        <int name="pause"/>
        <exec name="upd"/>
      </event>
      <event label="Jak End" id="jend">
        <onchange var="jak"/>
        <range var="jak">0</range>
        <exec name="upd"/>
      </event>
    </watch>
  </app>
</adb>
