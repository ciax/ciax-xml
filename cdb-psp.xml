<?xml version="1.0" encoding="utf-8"?>
<cdb xsi:schemaLocation="http://ciax.sum.naoj.org/ciax-xml/schema/cdb.xsd" xmlns="http://ciax.sum.naoj.org/ciax-xml/cdb" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <class frame="psp" id="psp" label="MOIRCS Ext Heater">
    <commands xmlns="http://ciax.sum.naoj.org/ciax-xml/cdbc">
      <session id="upd" label="Update Status">
        <statement command="getstat" />
      </session>
      <session id="setlmt" label="Set Limit 20V/5A/100W">
        <statement command="setvl">
          <argv>20</argv>
        </statement>
        <statement command="setal">
          <argv>5</argv>
        </statement>
        <statement command="setpl">
          <argv>100</argv>
        </statement>
        <statement command="getstat" />
      </session>
      <session id="setv" label="Set Voltage 0-50[V]">
        <statement command="setv">
          <argv valid="0:50">$1</argv>
        </statement>
        <statement command="getstat" />
      </session>
      <session id="setp" label="Set Power 0-100[W]">
        <statement command="setv">
          <argv format="%5.2f" valid="0:100">Math.sqrt($1*26)</argv>
        </statement>
        <statement command="getstat" />
      </session>
    </commands>
    <status xmlns="http://ciax.sum.naoj.org/ciax-xml/cdbs">
      <value id="vol" label="OUTPUT (V)" group="o">
        <float ref="v" format="%3.2f" />
      </value>
      <value id="amp" label="OUTPUT (A)" group="o">
        <float ref="a" format="%3.2f" />
      </value>
      <value id="wat" label="OUTPUT (W)" group="o">
        <float ref="w" format="%3.2f" />
      </value>
      <value id="vl" label="Limit (V)" group="l">
        <float ref="u" format="%3.2f" />
      </value>
      <value id="il" label="Limit (A)" group="l">
        <float ref="i" format="%3.2f" />
      </value>
      <value id="pl" label="Limit (W)" group="l">
        <float ref="p" format="%3.2f" />
      </value>
      <value id="sw" label="OUTPUT ON/OFF" group="s1" symbol="warn">
        <string ref="f1" />
      </value>
      <value id="tmp" label="OverHeat" group="s1" symbol="alarm">
        <string ref="f2" />
      </value>
      <value id="kn1" label="Wheel Knov Fine" group="s2" symbol="normal">
        <string ref="f3" />
      </value>
      <value id="kn2" label="Wheel Knov Unlock" group="s2" symbol="normal">
        <string ref="f4" />
      </value>
      <value id="rem" label="REMOTE" group="s3" symbol="normal">
        <string ref="f5" />
      </value>
      <value id="loc" label="Local Lock" group="s3" symbol="normal">
        <string ref="f6" />
      </value>
    </status>
  </class>
</cdb>
