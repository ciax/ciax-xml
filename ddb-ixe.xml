<?xml version="1.0" encoding="iso-8859-1"?>
<ddb xsi:schemaLocation="http://ciax.sum.naoj.org/ciax-xml/schema/ddb.xsd" xmlns="http://ciax.sum.naoj.org/ciax-xml/ddb" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <device id="ixe" label="Phytron IXEa-A" reference="http://ciax.sum.naoj.org/man/phytron/phytron-ixe.pdf" wait="0.2">
    <serial databit="8" flowctl="NONE" parity="NONE" speed="9600" stopbit="1" />
    <cmdselect>
      <!--String Length must be <32-->
      <command id="getstat" label="Get status" response="getstat" type="stat">
        <data>ST</data>
      </command>
      <command id="initrot" label="Parameter set for rotation" response="default" type="config">
        <repeat from="1" to="6">
          <formula>$_</formula>
          <data>P01S0</data>
          <data></data>
        </repeat>
      </command>
      <command id="initunit" label="Parameter unit set to pulse step" response="default" type="config">
        <repeat from="1" to="6">
          <formula>$_</formula>
          <data>P02S1</data>
          <data></data>
        </repeat>
      </command>
      <command id="initfactor" label="Parameter unit factor set to 1" response="default" type="config">
        <repeat from="1" to="6">
          <formula>$_</formula>
          <data>P03S1</data>
          <data></data>
        </repeat>
      </command>
      <command id="chkems" label="Check Emstop [1-6]" response="chkems" type="stat">
        <parameters>
          <par label="[1-6]">
            <range>1:6</range>
          </par>
        </parameters>
        <formula>$1</formula>
        <data>=N</data>
      </command>
      <command id="chkpse" label="Check Power Stage Err [1-6]" response="chkpse" type="stat">
        <parameters>
          <par label="[1-6]">
            <range>1:6</range>
          </par>
        </parameters>
        <formula>$1</formula>
        <data>=E</data>
      </command>
      <command id="chkrun" label="Check Run [1-6]" response="chkrun" type="stat">
        <parameters>
          <par label="[1-6]">
            <range>1:6</range>
          </par>
        </parameters>
        <formula>$1</formula>
        <data>=H</data>
      </command>
      <command id="getp" label="Get pulse [1-6]" response="getp" type="stat">
        <parameters>
          <par label="[1-6]">
            <range>1:6</range>
          </par>
        </parameters>
        <formula>$1</formula>
        <data>P21R</data>
      </command>
      <command id="setp_a" label="Set pulse from buffer(1-3)" response="default" type="config" nocache="true">
        <repeat from="1" to="3">
          <formula>$_</formula>
          <data>P21S</data>
          <formula>${p:$_-1}</formula>
          <data></data>
        </repeat>
      </command>
      <command id="setp_b" label="Set pulse from buffer(4-6)" response="default" type="config" nocache="true">
        <repeat from="4" to="6">
          <formula>$_</formula>
          <data>P21S</data>
          <formula>${p:$_-1}</formula>
          <data></data>
        </repeat>
      </command>
      <command id="getspd" label="Get speed [1-6]" response="getspd" type="stat">
        <parameters>
          <par label="[1-6]">
            <range>1:6</range>
          </par>
        </parameters>
        <formula>$1</formula>
        <data>P14R</data>
      </command>
      <command id="setspd_a" label="Set speed from buffer (1-3)" response="default" type="config" nocache="true">
        <repeat from="1" to="3" delimiter=" ">
          <formula>$_</formula>
          <data>P14S</data>
          <formula>${spd:$_-1}</formula>
        </repeat>
      </command>
      <command id="setspd_b" label="Set speed from buffer (4-6)" response="default" type="config" nocache="true">
        <repeat from="4" to="6" delimiter=" ">
          <formula>$_</formula>
          <data>P14S</data>
          <formula>${spd:$_-1}</formula>
        </repeat>
      </command>
      <command id="getofs" label="Get Offset [1-6]" response="getofs" type="stat">
        <parameters>
          <par label="[1-6]">
            <range>1:6</range>
          </par>
        </parameters>
        <formula>$1</formula>
        <data>P12R</data>
      </command>
      <command id="setofs_a" label="Set offset from buffer(1-3)" response="default" type="config" nocache="true">
        <repeat from="1" to="3">
          <formula>$_</formula>
          <data>P12S</data>
          <formula>${ofs:$_-1}</formula>
          <data></data>
        </repeat>
      </command>
      <command id="setofs_b" label="Set offset from buffer(4-6)" response="default" type="config" nocache="true">
        <repeat from="4" to="6">
          <formula>$_</formula>
          <data>P12S</data>
          <formula>${ofs:$_-1}</formula>
          <data></data>
        </repeat>
      </command>
      <command id="act" label="Activate (Servo) All" response="default" type="action">
        <repeat from="1" to="6">
          <formula>$_</formula>
          <data>MA</data>
          <data></data>
        </repeat>
      </command>
      <command id="deact" label="Deactivate (Free) All" response="default" type="action">
        <repeat from="1" to="6">
          <formula>$_</formula>
          <data>MD</data>
          <data></data>
        </repeat>
      </command>
      <command id="stop" label="Stop All" response="default" type="action">
        <repeat from="1" to="6">
          <formula>$_</formula>
          <data>S</data>
          <data></data>
        </repeat>
      </command>
      <command id="init" label="Initialize [1-6]" response="default" type="action">
        <parameters>
          <par label="[1-6]">
            <range>1:6</range>
          </par>
        </parameters>
        <formula>$1</formula>
        <data>0</data>
      </command>
      <command id="fw" label="Move forward (8000/hole)" response="default" type="action">
        <parameters>
          <par label="[1-6]">
            <range>1:6</range>
          </par>
          <par label="[0-192000]">
            <range>0:192000</range>
          </par>
        </parameters>
        <formula>$1</formula>
        <data>+</data>
        <formula>$2</formula>
      </command>
      <command id="bk" label="Move backward (8000/hole)" response="default" type="action">
        <parameters>
          <par label="[1-6]">
            <range>1:6</range>
          </par>
          <par label="[0-192000]">
            <range>0:192000</range>
          </par>
        </parameters>
        <formula>$1</formula>
        <data>-</data>
        <formula>$2</formula>
      </command>
      <command id="abs" label="Move absolute pos [0-192000] (8000/hole)" response="default" type="action">
        <parameters>
          <par label="[1-6]">
            <range>1:6</range>
          </par>
          <par label="[0-192000]">
            <range>0:192000</range>
          </par>
        </parameters>
        <formula>$1</formula>
        <data>A</data>
        <formula>$2</formula>
      </command>
    </cmdselect>
    <cmdframe>
      <data encode="chr" label="Prefix">2</data>
      <selected />
      <data encode="chr" label="Suffix">3</data>
      <data encode="chr">13</data>
      <data encode="chr">10</data>
    </cmdframe>
    <rspselect>
      <response id="getstat">
        <field assign="stat"></field>
      </response>
      <response id="chkrun">
        <array assign="run">
          <index size="6">$1-1</index>
        </array>
      </response>
      <response id="chkems">
        <array assign="ems">
          <index size="6">$1-1</index>
        </array>
      </response>
      <response id="chkpse">
        <array assign="pse">
          <index size="6">$1-1</index>
        </array>
      </response>
      <response id="getp">
        <array assign="p">
          <index size="6">$1-1</index>
        </array>
      </response>
      <response id="getspd">
        <array assign="spd">
          <index size="6">$1-1</index>
        </array>
      </response>
      <response id="getofs">
        <array assign="ofs">
          <index size="6">$1-1</index>
        </array>
      </response>
      <response id="default" />
    </rspselect>
    <rspframe terminator="\003\r\n">
      <field decode="chr" label="Prefix" length="1">
        <verify>2</verify>
      </field>
      <field decode="chr" label="ACK" length="1">
        <verify>6</verify>
      </field>
      <selected />
    </rspframe>
  </device>
</ddb>