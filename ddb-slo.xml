<?xml version="1.0" encoding="iso-8859-1"?>
<ddb xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://ciax.sum.naoj.org/ciax-xml/schema/ddb.xsd" xmlns="http://ciax.sum.naoj.org/ciax-xml">
  <device id="slo" label="SLOSYN SS6000i">
    <serial speed="9600" databit="8" parity="NONE" stopbit="1" flowctl="NONE" />
    <cmdframe>
      <select>
        <option id="bs" type="stat" label="Running Status">
          <data>bs</data>
        </option>
        <option id="in1" type="stat" label="Input 1 Status">
          <data>in(1)</data>
        </option>
        <option id="in2" type="stat" label="Input 2 Status">
          <data>in(2)</data>
        </option>
        <option id="in3" type="stat" label="Input 3 Status">
          <data>in(3)</data>
        </option>
        <option id="in4" type="stat" label="Input 4 Status">
          <data>in(4)</data>
        </option>
        <option id="in5" type="stat" label="Input 5 Status">
          <data>in(5)</data>
        </option>
        <option id="err" type="stat" label="Error Status">
          <data>err</data>
        </option>
        <option id="p" type="stat" label="Pulse Number">
          <data>p</data>
        </option>
        <option id="reset" type="config" label="Reset">
          <data>reset</data>
        </option>
        <option id="e1d" type="config" label="Event 1 Disable">
          <data>e1=0</data>
        </option>
        <option id="e2d" type="config" label="Event 2 Disable">
          <data>e2=0</data>
        </option>
        <option id="hl1" type="config" label="Hard Limit ON">
          <data>hl1</data>
        </option>
        <option id="stop" type="action" label="Stop Running">
          <data>stop</data>
        </option>
        <option id="jp" type="action" label="JOG Positive">
          <data>j=1</data>
        </option>
        <option id="jn" type="action" label="JOG Negative">
          <data>j=-1</data>
        </option>
        <option id="ma" type="action" label="Move Absolute Position">
          <data>ma=</data>
          <data format="%3.1" ref="par" />
        </option>
        <option id="set0" type="config" label="Set 0 ABS Counter">
          <data>abspos=0</data>
        </option>
        <option id="setp" type="config" label="Set Pulse Number">
          <data>p=</data>
          <data format="%5.2" ref="par" />
        </option>
      </select>
      <data pack="H*">0D</data>
    </cmdframe>
    <rspframe wait="0">
      <select>
        <option id="bs">
          <assign field="bs" length="1" />
        </option>
        <option id="in1">
          <assign field="in1" length="1" />
        </option>
        <option id="in2">
          <assign field="in2" length="1" />
        </option>
        <option id="in3">
          <assign field="in3" length="1" />
        </option>
        <option id="in4">
          <assign field="in4" length="1" />
        </option>
        <option id="in5">
          <assign field="in5" length="1" />
        </option>
        <option id="err">
          <assign field="err" length="3" />
        </option>
        <option id="p">
          <assign field="p" length="10" />
        </option>
        <option id="default">
          <verify length="1">
            <case type="pass" msg="Prefix OK">&gt;</case>
            <case msg="Prefix mismatch" type="error"></case>
          </verify>
        </option>
      </select>
    </rspframe>
  </device>
</ddb>