<?xml version="1.0" encoding="iso-8859-1"?>
<ddb xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://ciax.sum.naoj.org/ciax-xml/schema/ddb.xsd" xmlns="http://ciax.sum.naoj.org/ciax-xml">
  <device id="bbe" label="BB Electric">
    <serial speed="9600" databit="8" parity="NONE" stopbit="1" flowctl="NONE" />
    <session>
      <option id="getstat" label="Get Status" type="stat">
        <send>
          <data>RD</data>
        </send>
        <recv>
          <assign length="2" unpack="bew">stat</assign>
        </recv>
      </option>
      <option id="defio" label="DEFINE IN/OUT" type="config">
        <send>
          <data>SD</data>
          <data label="msb" pack="bew">0x1111</data>
        </send>
      </option>
      <option id="output" label="OUTPUT [DDDDD]" type="action">
        <send>
          <data>SO</data>
          <par pack="bew" valid="0x[0-9a-fA-F]{1,4}" />
        </send>
      </option>
    </session>
    <cmdframe>
      <data label="Prefix">!0</data>
      <select></select>
    </cmdframe>
    <rspframe wait="0.3">
      <select></select>
    </rspframe>
  </device>
</ddb>