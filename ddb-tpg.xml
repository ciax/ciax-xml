<?xml version="1.0" encoding="iso-8859-1"?>
<ddb xmlns="http://ciax.sum.naoj.org/ciax-xml" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://ciax.sum.naoj.org/ciax-xml/schema/ddb.xsd">
  <device id="tpg" label="Pfeiffer Vacuum Gauge TPG262" reference="http://ciax.sum.naoj.org/man/pfeiffer/bg5198be.pdf" wait="0.3">
    <selection>
      <session id="reqstat" label="Request status" type="stat">
        <send>
          <data label="Measurment data gauges 1&amp;2">PRX</data>
          <data label="Suffix" encode="chr">13</data>
        </send>
        <recv>
          <verify length="1" decode="chr">6</verify>
        </recv>
      </session>
      <session id="getstat" label="Get status" type="stat">
        <send>
          <data label="ENQ" encode="chr">5</data>
        </send>
        <recv>
          <split delimiter=",">
            <field>st1</field>
            <field>ch1</field>
            <field>st2</field>
            <field>ch2</field>
          </split>
        </recv>
      </session>
    </selection>
    <cmdframe>
      <selected />
    </cmdframe>
    <rspframe terminator="\r\n">
      <selected />
    </rspframe>
  </device>
</ddb>

