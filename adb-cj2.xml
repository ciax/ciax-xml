<?xml version="1.0" encoding="utf-8"?>
<adb xmlns="http://ciax.sum.naoj.org/ciax-xml/adb">
  <app frm_id="cj2" id="cj2" label="Stand-by Flange PLC" version="2">
    <commands xmlns="http://ciax.sum.naoj.org/ciax-xml/adbc">
      <group id="gint" caption="Interrpt Commands" column="2">
        <command id="upd" label="Status update">
          <frmcmd name="getstat" />
          <frmcmd name="getcmd" />
          <frmcmd name="geterr" />
          <frmcmd name="getzlen" />
        </command>
        <command id="ready" label="Drive Ready">
          <frmcmd name="setbit">
            <argv>0</argv>
            <argv>3</argv>
          </frmcmd>
          <frmcmd name="clrint" />
          <frmcmd name="getstat" />
        </command>
        <command id="pause" label="Pause Acton">
          <frmcmd name="setbit">
            <argv>0</argv>
            <argv>1</argv>
          </frmcmd>
          <frmcmd name="clrint" />
          <frmcmd name="getstat" />
        </command>
        <command id="resume" label="Resume Pause">
          <frmcmd name="setbit">
            <argv>0</argv>
            <argv>10</argv>
          </frmcmd>
          <frmcmd name="clrint" />
          <frmcmd name="getstat" />
        </command>
        <command id="stop" label="Emergency Stop">
          <frmcmd name="setbit">
            <argv>0</argv>
            <argv>0</argv>
          </frmcmd>
          <frmcmd name="clrint" />
          <frmcmd name="getstat" />
        </command>
        <command id="reserr" label="Reset Error">
          <frmcmd name="setbit">
            <argv>0</argv>
            <argv>11</argv>
          </frmcmd>
          <frmcmd name="clrint" />
          <frmcmd name="getstat" />
          <frmcmd name="geterr" />
        </command>
        <command id="reset" label="ResetBit">
          <frmcmd name="clrbit" />
          <frmcmd name="getcmd" />
          <frmcmd name="getstat" />
        </command>
      </group>
      <group id="gfix" caption="Fix Frange Control" column="2">
        <command id="fhook" label="Fix Flange Hook">
          <frmcmd name="setbit">
            <argv>1</argv>
            <argv>0</argv>
          </frmcmd>
          <frmcmd name="getcmd" />
        </command>
        <command id="fjup" label="Fix Flange Jack Up">
          <frmcmd name="setbit">
            <argv>1</argv>
            <argv>4</argv>
          </frmcmd>
          <frmcmd name="getcmd" />
        </command>
        <command id="funhk" label="Fix Flange UnHook">
          <frmcmd name="setbit">
            <argv>1</argv>
            <argv>1</argv>
          </frmcmd>
          <frmcmd name="getcmd" />
        </command>
        <command id="fjdw" label="Fix Flange Jack Down">
          <frmcmd name="setbit">
            <argv>1</argv>
            <argv>5</argv>
          </frmcmd>
          <frmcmd name="getcmd" />
        </command>
      </group>
      <group id="gmov" caption="Mov Frange Control" column="2">
        <command id="mhook" label="Mov Flange Hook">
          <frmcmd name="setbit">
            <argv>2</argv>
            <argv>0</argv>
          </frmcmd>
          <frmcmd name="getcmd" />
        </command>
        <command id="mjup" label="Mov Flange Jack Up">
          <frmcmd name="setbit">
            <argv>2</argv>
            <argv>4</argv>
          </frmcmd>
          <frmcmd name="getcmd" />
        </command>
        <command id="munhk" label="Mov Flange UnHook">
          <frmcmd name="setbit">
            <argv>2</argv>
            <argv>1</argv>
          </frmcmd>
          <frmcmd name="getcmd" />
        </command>
        <command id="mjdw" label="Mov Flange Jack Down">
          <frmcmd name="setbit">
            <argv>2</argv>
            <argv>5</argv>
          </frmcmd>
          <frmcmd name="getcmd" />
        </command>
      </group>
      <group id="gtr" caption="Transer Control" column="2">
        <command id="rotout" label="Rotate Loading">
          <frmcmd name="setbit">
            <argv>2</argv>
            <argv>2</argv>
          </frmcmd>
          <frmcmd name="getcmd" />
        </command>
        <command id="trout" label="Transer Out">
          <frmcmd name="setbit">
            <argv>2</argv>
            <argv>6</argv>
          </frmcmd>
          <frmcmd name="getcmd" />
        </command>
        <command id="rotin" label="Rotate Storing">
          <frmcmd name="setbit">
            <argv>2</argv>
            <argv>3</argv>
          </frmcmd>
          <frmcmd name="getcmd" />
        </command>
        <command id="trin" label="Transer In">
          <frmcmd name="setbit">
            <argv>2</argv>
            <argv>7</argv>
          </frmcmd>
          <frmcmd name="getcmd" />
        </command>
      </group>
      <group id="gipw" caption="Instrument Power Supply" column="2">
        <command id="fpwon" label="Fix IPW On">
          <frmcmd name="setbit">
            <argv>3</argv>
            <argv>2</argv>
          </frmcmd>
          <frmcmd name="getcmd" />
        </command>
        <command id="mpwon" label="Mov IPW On">
          <frmcmd name="setbit">
            <argv>3</argv>
            <argv>4</argv>
          </frmcmd>
          <frmcmd name="getstat" />
        </command>
        <command id="fpwoff" label="Fix IPW Off">
          <frmcmd name="setbit">
            <argv>3</argv>
            <argv>3</argv>
          </frmcmd>
          <frmcmd name="getcmd" />
        </command>
        <command id="mpwoff" label="Mov IPW Off">
          <frmcmd name="setbit">
            <argv>3</argv>
            <argv>5</argv>
          </frmcmd>
          <frmcmd name="getcmd" />
        </command>
      </group>
      <group id="gccd" caption="Other Power Control" column="2">
        <command id="fccdon" label="Fix CCD Power On">
          <frmcmd name="setbit">
            <argv>3</argv>
            <argv>8</argv>
          </frmcmd>
          <frmcmd name="getcmd" />
        </command>
        <command id="mccdon" label="Mov CCD Power On">
          <frmcmd name="setbit">
            <argv>3</argv>
            <argv>12</argv>
          </frmcmd>
          <frmcmd name="getcmd" />
        </command>
        <command id="fccdoff" label="Fix CCD Power Off">
          <frmcmd name="setbit">
            <argv>3</argv>
            <argv>9</argv>
          </frmcmd>
          <frmcmd name="getcmd" />
        </command>
        <command id="mccdoff" label="Mov CCD Power Off">
          <frmcmd name="setbit">
            <argv>3</argv>
            <argv>13</argv>
          </frmcmd>
          <frmcmd name="getcmd" />
        </command>
        <command id="fccdtoff" label="Fix CCD Timer Off">
          <frmcmd name="setbit">
            <argv>3</argv>
            <argv>10</argv>
          </frmcmd>
          <frmcmd name="getcmd" />
        </command>
        <command id="mccdtoff" label="Mov CCD Timer Off">
          <frmcmd name="setbit">
            <argv>3</argv>
            <argv>14</argv>
          </frmcmd>
          <frmcmd name="getcmd" />
        </command>
        <command id="pwoff" label="Outlet Power Off">
          <frmcmd name="setbit">
            <argv>1</argv>
            <argv>8</argv>
          </frmcmd>
          <frmcmd name="getstat" />
        </command>
      </group>
      <group id="getc" caption="Other Controls" column="2">
        <command id="chgfw" label="Chg Plug Forward">
          <frmcmd name="setbit">
            <argv>1</argv>
            <argv>6</argv>
          </frmcmd>
          <frmcmd name="getcmd" />
        </command>
        <command id="dopen" label="Door Open">
          <frmcmd name="setbit">
            <argv>3</argv>
            <argv>0</argv>
          </frmcmd>
          <frmcmd name="getcmd" />
        </command>
        <command id="chgbk" label="Chg Plug Backward">
          <frmcmd name="setbit">
            <argv>1</argv>
            <argv>7</argv>
          </frmcmd>
          <frmcmd name="getcmd" />
        </command>
        <command id="dclose" label="Door Close">
          <frmcmd name="setbit">
            <argv>3</argv>
            <argv>1</argv>
          </frmcmd>
          <frmcmd name="getcmd" />
        </command>
        <command id="chgon" label="Chg Power ON">
          <frmcmd name="setbit">
            <argv>1</argv>
            <argv>8</argv>
          </frmcmd>
          <frmcmd name="getcmd" />
        </command>
      </group>
    </commands>
    <status xmlns="http://ciax.sum.naoj.org/ciax-xml/adbs" symtbl="cj2">
      <group id="g1" caption="MAIN" column="3">
        <binary id="ctl" label="CONTROL" symbol="ctl">
          <normal ref="w" index="0" bit="6" />
          <normal ref="w" index="0" bit="7" />
        </binary>
        <binary id="pse" label="PAUSE" symbol="warn">
          <normal ref="w" index="0" bit="1" />
        </binary>
        <binary id="rdy" label="READY" symbol="off-warn">
          <normal ref="w" index="0" bit="3" />
        </binary>
        <integer id="err" label="ERROR CODE" symbol="err">
          <field ref="err" />
        </integer>
        <binary id="emg" label="EMG STOP" symbol="alarm">
          <normal ref="w" index="0" bit="0" />
        </binary>
      </group>
      <group id="g2" caption="ACTION STAT" column="3">
        <integer id="exe" label="EXECUTING" symbol="nonzero">
          <field ref="c" index="0" />
          <field ref="c" index="1" />
          <field ref="c" index="2" />
          <field ref="c" index="3" />
        </integer>
        <binary id="run" label="RUNNING" symbol="action">
          <normal ref="w" index="0" bit="15" />
        </binary>
        <binary id="cmp" label="COMPLETE" symbol="warn">
          <normal ref="w" index="0" bit="14" />
        </binary>
      </group>
      <group id="g3" caption="FIX Flange" column="3">
        <binary id="fis" label="Attach" symbol="ist">
          <normal ref="w" index="2" bit="0" />
          <normal ref="w" index="2" bit="1" />
          <normal ref="w" index="2" bit="2" />
          <normal ref="w" index="2" bit="3" />
        </binary>
        <binary id="fhk" label="Hook" symbol="hook">
          <normal ref="w" index="1" bit="0" />
          <normal ref="w" index="1" bit="1" />
        </binary>
        <binary id="fjb" label="Jack Bolt" symbol="jack">
          <normal ref="w" index="1" bit="14" />
          <normal ref="w" index="1" bit="15" />
        </binary>
      </group>
      <group id="g4" caption="MOV Flange" column="3">
        <binary id="mis" label="Attach" symbol="ist">
          <normal ref="w" index="6" bit="0" />
          <normal ref="w" index="6" bit="1" />
          <normal ref="w" index="6" bit="2" />
          <normal ref="w" index="6" bit="3" />
        </binary>
        <binary id="mhk" label="Hook" symbol="hook">
          <normal ref="w" index="5" bit="0" />
          <normal ref="w" index="5" bit="1" />
        </binary>
        <binary id="mjb" label="Jack Bolt" symbol="jack">
          <normal ref="w" index="5" bit="14" />
          <normal ref="w" index="5" bit="15" />
        </binary>
        <binary id="mrt" label="Rotation" symbol="rot">
          <normal ref="w" index="5" bit="2" />
          <normal ref="w" index="5" bit="3" />
        </binary>
        <binary id="mtr" label="Transer" symbol="mov">
          <normal ref="w" index="6" bit="8" />
          <normal ref="w" index="6" bit="6" />
        </binary>
      </group>
      <group id="gp" caption="Power Status" column="3">
        <binary id="fpw" label="Fix Inst Power" symbol="off-warn">
          <normal ref="w" index="9" bit="8" />
        </binary>
        <binary id="fph" label="PW Phase" symbol="rst">
          <normal ref="w" index="10" bit="0" />
          <normal ref="w" index="10" bit="1" />
          <normal ref="w" index="10" bit="2" />
        </binary>
        <binary id="fcc" label="CCD Power" symbol="action">
          <normal ref="w" index="9" bit="10" />
        </binary>
        <binary id="mpw" label="Mov Inst Power" symbol="off-warn">
          <normal ref="w" index="9" bit="9" />
        </binary>
        <binary id="mph" label="PW Phase" symbol="rst">
          <normal ref="w" index="10" bit="8" />
          <normal ref="w" index="10" bit="9" />
          <normal ref="w" index="10" bit="10" />
        </binary>
        <binary id="mcc" label="CCD Power" symbol="action">
          <normal ref="w" index="9" bit="11" />
        </binary>
      </group>
      <group id="g5" caption="Z Sensor" column="4">
        <repeat_var from="1" to="4">
          <float id="fz$_" label="Fix $_" format="%.2f" formula="$#/100">
            <field ref="d" index="$_-1" />
          </float>
        </repeat_var>
        <repeat_var from="1" to="4">
          <float id="mz$_" label="Mov $_" format="%.2f" formula="$#/100">
            <field ref="d" index="$_+3" />
          </float>
        </repeat_var>
      </group>
      <group id="g6" caption="Instrument" column="2">
        <integer id="fid" label="Fix Instrument ID" symbol="iid_ac">
          <field ref="d" index="8" />
        </integer>
        <integer id="mid" label="Mov Instrument ID" symbol="iid_ac">
          <field ref="d" index="9" />
        </integer>
      </group>
      <group id="g7" caption="Charging" column="4">
        <binary id="chg" label="CHG Plug" symbol="mov">
          <normal ref="w" index="2" bit="6" />
          <normal ref="w" index="2" bit="7" />
        </binary>
        <binary id="ccn" label="CHG Connect" symbol="action">
          <normal ref="w" index="4" bit="8" />
        </binary>
        <binary id="cpw" label="CHG Power" symbol="action">
          <normal ref="w" index="4" bit="12" />
        </binary>
        <binary id="dor" label="Door" symbol="dor">
          <normal ref="w" index="9" bit="0" />
          <normal ref="w" index="9" bit="1" />
        </binary>
      </group>
    </status>
    <watch xmlns="http://ciax.sum.naoj.org/ciax-xml/wdb" interval="1">
      <event label="On Motion" id="mot">
        <pattern var="exe" inv="true">0</pattern>
        <block_grp ref="gfix"></block_grp>
        <block_grp ref="gmov"></block_grp>
        <block_grp ref="gtr"></block_grp>
        <block name="dopen"></block>
        <block name="dclose"></block>
        <int name="pause" />
        <exec name="upd"></exec>
      </event>
      <event label="On Completion" id="cmp">
        <onchange var="cmp"></onchange>
        <pattern var="cmp">1</pattern>
        <exec name="reset"></exec>
      </event>
      <event label="On Error" id="err">
        <onchange var="err"></onchange>
        <pattern var="err" inv="true">0</pattern>
        <exec name="reset"></exec>
      </event>
    </watch>
  </app>
</adb>
