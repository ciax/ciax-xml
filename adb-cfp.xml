<?xml version="1.0" encoding="utf-8"?>
<adb xmlns="http://ciax.sum.naoj.org/ciax-xml/adb">
  <app frm_type="cfp" id="cfp" label="MOIRCS Field Point">
    <commands xmlns="http://ciax.sum.naoj.org/ciax-xml/adbc">
      <group id="g0" caption="Device">
        <command id="upd" label="Update Status">
          <frmcmd name="getstat" />
          <frmcmd name="getstat2" />
        </command>
        <command id="ro" label="Robohand All Open">
          <frmcmd name="putdata">
            <argv>0x3c</argv>
            <argv>0x28</argv>
          </frmcmd>
          <frmcmd name="getstat" />
        </command>
        <command id="rc" label="Robohand All Close">
          <frmcmd name="putdata">
            <argv>0x3c</argv>
            <argv>0x14</argv>
          </frmcmd>
          <frmcmd name="getstat" />
        </command>
        <command id="go" label="Gate Valve Open">
          <frmcmd name="putdata">
            <argv>0xc0</argv>
            <argv>0x80</argv>
          </frmcmd>
          <frmcmd name="getstat" />
        </command>
        <command id="gc" label="Gate Valve Close">
          <frmcmd name="putdata">
            <argv>0xc0</argv>
            <argv>0x40</argv>
          </frmcmd>
          <frmcmd name="getstat" />
        </command>
        <command id="av" label="Arm Vertical">
          <frmcmd name="putdata">
            <argv>0x3000</argv>
            <argv>0x2000</argv>
          </frmcmd>
          <frmcmd name="getstat" />
        </command>
        <command id="ah" label="Arm Horizontal">
          <frmcmd name="putdata">
            <argv>0x3000</argv>
            <argv>0x1000</argv>
          </frmcmd>
          <frmcmd name="getstat" />
        </command>
        <command id="ao" label="Arm Open">
          <frmcmd name="putdata">
            <argv>0xc00</argv>
            <argv>0x800</argv>
          </frmcmd>
          <frmcmd name="getstat" />
        </command>
        <command id="ac" label="Arm Close">
          <frmcmd name="putdata">
            <argv>0xc00</argv>
            <argv>0x400</argv>
          </frmcmd>
          <frmcmd name="getstat" />
        </command>
        <command id="save" label="Save Output">
          <frmcmd name="save"></frmcmd>
        </command>
        <command id="load" label="Load Output(Caution! Move)">
          <frmcmd name="load">
            <argv>latest</argv>
          </frmcmd>
          <frmcmd name="putfield"></frmcmd>
        </command>
      </group>
    </commands>
    <status xmlns="http://ciax.sum.naoj.org/ciax-xml/adbs" table="cfp">
      <group caption="Output" id="g1" column="2">
        <value id="ao" label="Arm Gripper(out)" symbol="oc">
          <binary bit="10" ref="output" />
          <binary bit="11" ref="output" />
        </value>
        <value id="hr" label="Arm Rotation(out)" symbol="rot">
          <binary bit="12" ref="output" />
          <binary bit="13" ref="output" />
        </value>
        <value id="rao" label="Robohand A(out)" symbol="oc">
          <binary bit="2" ref="output" />
          <binary bit="3" ref="output" />
        </value>
        <value id="rbo" label="Robohand B(out)" symbol="oc">
          <binary bit="4" ref="output" />
          <binary bit="5" ref="output" />
        </value>
        <value id="go" label="Gate Valve(out)" symbol="oc">
          <binary bit="6" ref="output" />
          <binary bit="7" ref="output" />
        </value>
      </group>
      <group caption="Input" id="g2" column="2">
        <value id="rh1" label="RoboHand 1(in)" symbol="oc">
          <binary bit="4" ref="input" />
          <binary bit="5" ref="input" />
        </value>
        <value id="rh2" label="RoboHand 2(in)" symbol="oc">
          <binary bit="6" ref="input" />
          <binary bit="7" ref="input" />
        </value>
        <value id="rh3" label="RoboHand 3(in)" symbol="oc">
          <binary bit="8" ref="input" />
          <binary bit="9" ref="input" />
        </value>
        <value id="rh4" label="RoboHand 4(in)" symbol="oc">
          <binary bit="10" ref="input" />
          <binary bit="11" ref="input" />
        </value>
        <value id="gv" label="Gate Valve(in)" symbol="oc">
          <binary bit="0" ref="input" />
          <binary bit="1" ref="input" />
        </value>
        <value id="hv" label="Arm Rotation(in)" symbol="rot">
          <binary bit="2" ref="input" />
          <binary bit="3" ref="input" />
        </value>
      </group>
    </status>
  </app>
</adb>
