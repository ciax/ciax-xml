<?xml version="1.0" encoding="utf-8"?>
<adb xmlns="http://ciax.sum.naoj.org/ciax-xml/adb">
  <app frm_type="srm" id="srm" label="CsEtr Controller">
    <commands xmlns="http://ciax.sum.naoj.org/ciax-xml/adbc">
      <cmdset id="upd" label="Update Status">
        <command name="getstat" />
      </cmdset>
      <cmdset id="c3on" label="CIAX3 POWER ON">
        <command name="fset" label="Bit 0 on">
          <argv>5</argv>
        </command>
      </cmdset>
      <cmdset id="c3off" label="CIAX3 POWER OFF">
        <command name="fset" label="Bit 0 OFF">
          <argv>4</argv>
        </command>
      </cmdset>
      <cmdset id="emon" label="CIAX3 EMERGENCY ON">
        <command name="fset" label="Bit 1 ON">
          <argv>50</argv>
        </command>
      </cmdset>
      <cmdset id="emoff" label="CIAX3 EMERGENCY OFF">
        <command name="fset" label="Bit 1 OFF">
          <argv>40</argv>
        </command>
      </cmdset>
      <cmdset id="ccdon" label="CS CCD ON">
        <command name="fset" label="Bit 2 ON">
          <argv>500</argv>
        </command>
      </cmdset>
      <cmdset id="ccdoff" label="CS CCD OFF">
        <command name="fset" label="Bit 2 OFF">
          <argv>400</argv>
        </command>
      </cmdset>
      <cmdset id="lanon" label="CS LAN ON">
        <command name="fset" label="Bit 3 ON">
          <argv>5000</argv>
        </command>
      </cmdset>
      <cmdset id="lanoff" label="CS LAN OFF">
        <command name="fset" label="Bit 3 OFF">
          <argv>4000</argv>
        </command>
      </cmdset>
      <cmdset id="ipwon" label="CS IPW ON">
        <command name="fset" label="Bit 4 ON">
          <argv>50000</argv>
        </command>
      </cmdset>
      <cmdset id="ipwoff" label="CS IPW OFF">
        <command name="fset" label="Bit 4 OFF">
          <argv>40000</argv>
        </command>
      </cmdset>
      <cmdset id="ston" label="STOW PIN ON">
        <command name="fset" label="Bit 5 ON">
          <argv>500000</argv>
        </command>
      </cmdset>
      <cmdset id="stoff" label="STOW PIN OFF">
        <command name="fset" label="Bit 5 OFF">
          <argv>400000</argv>
        </command>
      </cmdset>
    </commands>
    <status xmlns="http://ciax.sum.naoj.org/ciax-xml/adbs">
      <row>
        <value id="iid" label="CAS INST ID" symbol="iid_ac">
          <string ref="c1d2" />
        </value>
        <value id="ipw" label="CAS IPW" symbol="off-warn">
          <binary bit="0" ref="c1d1" />
        </value>
      </row>
      <row>
        <value id="stp" label="STOW PIN" symbol="warn">
          <binary bit="1" ref="c1d1" />
        </value>
        <value id="ccd" label="CAS CCD PW" symbol="warn">
          <binary bit="2" ref="c1d0" />
        </value>
        <value id="lan" label="CAS LAN PW" symbol="hide">
          <binary bit="3" ref="c1d0" />
        </value>
      </row>
      <row>
        <value id="c3p" label="CIAX3 PW" symbol="hide">
          <binary bit="0" ref="c1d0" />
        </value>
        <value id="c3e" label="CIAX3 EMG" symbol="alarm">
          <binary bit="1" ref="c1d0" />
        </value>
      </row>
    </status>
  </app>
</adb>
