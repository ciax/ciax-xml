<?xml version="1.0" encoding="utf-8"?>
<adb xmlns="http://ciax.sum.naoj.org/ciax-xml/adb">
  <app frm_id="mel" id="cjk" label="Cart Jack Table" version="0">
    <commands xmlns="http://ciax.sum.naoj.org/ciax-xml/adbc">
      <group id="gmtn" caption="Maintenance Commands" column="2">
        <command id="upd" label="Status update">
          <frmcmd name="getstat" />
          <frmcmd name="getcmd" />
        </command>
        <command id="get_tbl" label="Get Jack Table">
          <frmcmd name="rw_tbl">
            <argv>1</argv>
          </frmcmd>
          <repeat counter="t" from="0" to="5">
            <repeat counter="j" from="0" to="3">
              <frmcmd name="get_tbl">
                <argv>$t</argv>
                <argv>$j</argv>
              </frmcmd>
            </repeat>
          </repeat>
        </command>
        <command id="set_tbl" label="Set Jack Table">
          <repeat counter="t" from="0" to="5">
            <repeat counter="j" from="0" to="3">
              <frmcmd name="set_tbl">
                <argv>$t</argv>
                <argv>$j</argv>
              </frmcmd>
            </repeat>
          </repeat>
          <frmcmd name="rw_tbl">
            <argv>0</argv>
          </frmcmd>
        </command>
      </group>
    </commands>
    <status xmlns="http://ciax.sum.naoj.org/ciax-xml/adbs" symtbl="mel">
      <repeat_grp from="0" to="10" counter="i">
        <repeat_grp from="0" to="5" counter="t">
          <group id="id$it$t" column="4">
            <repeat_var from="0" to="3" counter="l">
              <repeat_var from="0" to="3" counter="j">
                <float id="i$it$tl$lj$j" label="Lev$l,Jak$j" format="%.2f" formula="$#/100">
                  <field ref="t" index="$t:$j:$i*4+$l" />
                </float>
              </repeat_var>
            </repeat_var>
          </group>
        </repeat_grp>
      </repeat_grp>
    </status>
  </app>
</adb>
