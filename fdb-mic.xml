<?xml version="1.0" encoding="utf-8"?>
<fdb xmlns="http://ciax.sum.naoj.org/ciax-xml/fdb">
  <frame id="mic" label="Piezo Motor(Micronix MMC-100)" reference="http://www.micronixusa.com/motion/assets/docs/manuals/MMC-100%20Manual%20Rev2.00.pdf" wait="0.1">
    <serial databit="8" flowctl="NONE" parity="NONE" speed="38400" stopbit="1" />
    <cmdframe xmlns="http://ciax.sum.naoj.org/ciax-xml/fdbc">
      <body/>
      <char length="1">0xa</char>
      <char length="1">0xd</char>
    </cmdframe>
    <command xmlns="http://ciax.sum.naoj.org/ciax-xml/fdbc">
      <!-- Status Commands -->
      <item id="getst" label="Get Status" response="getst" type="stat">
        <par_num>1:6</par_num>
        <string>$1</string>
        <string>STA?</string>
      </item>
      <item id="getp" label="Get position [1-6]" response="getp" type="stat">
        <par_num>1:6</par_num>
        <string>$1</string>
        <string>POS?</string>
      </item>
      <item id="geta" label="Get acceleration [1-6]" response="geta" type="stat">
        <par_num>1:6</par_num>
        <string>$1</string>
        <string>ACC?</string>
      </item>
      <!-- Motion Commands -->
      <item id="home" label="Move to Home position [1-6]" type="action">
        <par_num>1:6</par_num>
        <string>$1</string>
        <string>HOM</string>
      </item>
    </command>
    <rspframe xmlns="http://ciax.sum.naoj.org/ciax-xml/fdbr" terminator="\n\r">
      <field label="Prefix" length="1">#</field>
      <body/>
    </rspframe>
    <responses xmlns="http://ciax.sum.naoj.org/ciax-xml/fdbr">
      <response id="getst">
        <array assign="st" label="Status">
          <index range="$1-1" size="6" />
        </array>
      </response>
      <response id="getp">
        <array assign="pos" label="Position" delimiter=",">
          <index range="$1-1" size="6" />
          <index size="2" />
        </array>
      </response>
      <response id="geta">
        <array assign="acc" label="Acceleration">
          <index range="$1-1" size="6" />
        </array>
      </response>
    </responses>
  </frame>
</fdb>
