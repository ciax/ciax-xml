<?xml version="1.0" encoding="iso-8859-1"?>
<odb xmlns="http://ciax.sum.naoj.org/ciax-xml" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://ciax.sum.naoj.org/ciax-xml/schema/odb.xsd">
  <object id="det" device="srm" label="CsEtr Controller" client="socat - tcp:ltc-c:4001" server="socat - udp-l:25104,reuseaddr,fork">
    <selection>
      <session id="upd" label="Update Status">
        <command text="getstat" />
      </session>
      <session id="c3on" label="CIAX3 POWER ON">
        <command label="bit0 on" text="fset">
          <par type="text">5</par>
        </command>
      </session>
      <session id="c3off" label="CIAX3 POWER OFF">
        <command label="Bit 0 OFF" text="fset">
          <par type="text">4</par>
        </command>
      </session>
      <session id="emon" label="CIAX3 EMERGENCY ON">
        <command label="Bit 1 ON" text="fset">
          <par type="text">50</par>
        </command>
      </session>
      <session id="emoff" label="CIAX3 EMERGENCY OFF">
        <command label="Bit 1 OFF" text="fset">
          <par type="text">40</par>
        </command>
      </session>
      <session id="ccdon" label="CS CCD ON">
        <command label="Bit 2 ON" text="fset">
          <par type="text">500</par>
        </command>
      </session>
      <session id="ccdoff" label="CS CCD OFF">
        <command label="Bit 2 OFF" text="fset">
          <par type="text">400</par>
        </command>
      </session>
      <session id="lanon" label="CS LAN ON">
        <command label="Bit 3 ON" text="fset">
          <par type="text">5000</par>
        </command>
      </session>
      <session id="lanoff" label="CS LAN OFF">
        <command label="Bit 3 OFF" text="fset">
          <par type="text">4000</par>
        </command>
      </session>
      <session id="ipwon" label="CS IPW ON">
        <command label="Bit 4 ON" text="fset">
          <par type="text">50000</par>
        </command>
      </session>
      <session id="ipwoff" label="CS IPW OFF">
        <command label="Bit 4 OFF" text="fset">
          <par type="text">40000</par>
        </command>
      </session>
      <session id="ston" label="STOW PIN ON">
        <command label="Bit 5 ON" text="fset">
          <par type="text">500000</par>
        </command>
      </session>
      <session id="stoff" label="STOW PIN OFF">
        <command label="Bit 5 OFF" text="fset">
          <par type="text">400000</par>
        </command>
      </session>
    </selection>
    <status>
      <var id="iid" label="CAS INST ID" symbol="inst" trail="true">
        <string field="c1d2" />
      </var>
      <var id="ipw" label="CAS IPW" symbol="off-warn">
        <binary field="c1d1" bit="0" />
      </var>
      <var id="stp" label="STOW PIN" symbol="on-warn" trail="true">
        <binary field="c1d1" bit="1" />
      </var>
      <var id="ccd" label="CAS CCD PW" symbol="on-warn" trail="true">
        <binary field="c1d0" bit="2" />
      </var>
      <var id="lan" label="CAS LAN PW" symbol="hide">
        <binary field="c1d0" bit="3" />
      </var>
      <var id="c3p" label="CIAX3 PW" symbol="hide" trail="true">
        <binary field="c1d0" bit="0" />
      </var>
      <var id="c3e" label="CIAX3 EMG" symbol="alarm">
        <binary field="c1d0" bit="1" />
      </var>
    </status>
    <symbols>
      <symbol type="ENUM" id="inst">
        <case hl="warn" msg="NONE">0</case>
        <case hl="normal" msg="CIAX3">1</case>
        <case hl="normal" msg="COMICS">2</case>
        <case hl="normal" msg="CIAO">3</case>
        <case hl="normal" msg="FOCAS">4</case>
        <case hl="normal" msg="IRCS">5</case>
        <case hl="normal" msg="N/A">6</case>
        <case hl="normal" msg="MOIRCS">7</case>
        <case hl="normal" msg="MP-CS1">8</case>
        <case hl="normal" msg="MP-CS2">9</case>
      </symbol>
    </symbols>
  </object>
</odb>