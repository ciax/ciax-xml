<?xml version="1.0" encoding="utf-8"?>
<xsd:schema targetNamespace="http://ciax.sum.naoj.org/ciax-xml/idb" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.w3.org/2001/XMLSchema" xmlns:idb="http://ciax.sum.naoj.org/ciax-xml/idb" xmlns:idbc="http://ciax.sum.naoj.org/ciax-xml/idbc" xmlns:idbs="http://ciax.sum.naoj.org/ciax-xml/idbs"  xmlns:wdb="http://ciax.sum.naoj.org/ciax-xml/wdb" >
  <xsd:import schemaLocation="idbc.xsd" namespace="http://ciax.sum.naoj.org/ciax-xml/idbc" />
  <xsd:import schemaLocation="idbs.xsd" namespace="http://ciax.sum.naoj.org/ciax-xml/idbs" />
  <xsd:import namespace="http://ciax.sum.naoj.org/ciax-xml/wdb" schemaLocation="wdb.xsd" />
  <xsd:element name="idb">
    <xsd:complexType>
      <xsd:choice minOccurs="1" maxOccurs="unbounded">
        <xsd:element ref="idb:project" />
      </xsd:choice>
    </xsd:complexType>
  </xsd:element>
  <xsd:element name="project">
    <xsd:complexType>
      <xsd:choice minOccurs="1" maxOccurs="unbounded">
        <xsd:element ref="idb:group" />
      </xsd:choice>
      <xsd:attribute name="id" type="xsd:NCName" use="required" />
      <xsd:attribute name="caption" type="xsd:token" use="optional" />
      <xsd:attribute name="include" type="xsd:NCName" />
      <xsd:attribute name="column" type="xsd:int" />
    </xsd:complexType>
  </xsd:element>
  <xsd:element name="group">
    <xsd:complexType>
      <xsd:choice minOccurs="1" maxOccurs="unbounded">
        <xsd:element ref="idb:instance" />
        <xsd:element ref="idb:reference" />
      </xsd:choice>
      <xsd:attribute name="id" type="xsd:NCName" use="required" />
      <xsd:attribute name="caption" type="xsd:token" />
    </xsd:complexType>
  </xsd:element>
  <xsd:element name="instance">
    <xsd:complexType>
      <xsd:sequence minOccurs="0">
        <xsd:element ref="idbc:alias" minOccurs="0" maxOccurs="1" />
        <xsd:element ref="idbs:status" minOccurs="0" maxOccurs="1" />
        <xsd:element ref="wdb:watch" minOccurs="0" maxOccurs="1" />
      </xsd:sequence>
      <xsd:attribute name="id" type="xsd:NCName" use="required" />
      <xsd:attribute name="app_id" use="required" type="xsd:NCName" />
      <xsd:attribute name="frm_site" type="xsd:NCName" />
      <xsd:attribute name="host" type="xsd:token" />
      <xsd:attribute name="port" type="xsd:int" />
      <xsd:attribute name="label" type="xsd:token" />
    </xsd:complexType>
  </xsd:element>
  <xsd:element name="reference">
    <xsd:complexType>
      <xsd:attribute name="ref" type="xsd:NCName" use="required" />
    </xsd:complexType>
  </xsd:element>
</xsd:schema>
