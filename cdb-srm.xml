<?xml version='1.0' encoding='ISO-8859-1'?>
<cdb xsi:schemaLocation='http://ciax.sum.naoj.org/ciax-xml/schema/cdb.xsd' xmlns='http://ciax.sum.naoj.org/ciax-xml/cdb' xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'>
  <class device='srm' id='srm' label='CsEtr Controller'>
    <commands>
      <session id='upd' label='Update Status'>
        <statement>
          <text>getstat</text>
        </statement>
      </session>
      <session id='c3on' label='CIAX3 POWER ON'>
        <statement label='Bit 0 on'>
          <text>fset</text>
          <text>5</text>
        </statement>
      </session>
      <session id='c3off' label='CIAX3 POWER OFF'>
        <statement label='Bit 0 OFF'>
          <text>fset</text><text>4</text>
        </statement>
      </session>
      <session id='emon' label='CIAX3 EMERGENCY ON'>
        <statement label='Bit 1 ON'>
          <text>fset</text><text>50</text>
        </statement>
      </session>
      <session id='emoff' label='CIAX3 EMERGENCY OFF'>
        <statement label='Bit 1 OFF'>
          <text>fset</text><text>40</text>
        </statement>
      </session>
      <session id='ccdon' label='CS CCD ON'>
        <statement label='Bit 2 ON'>
          <text>fset</text><text>500</text>
        </statement>
      </session>
      <session id='ccdoff' label='CS CCD OFF'>
        <statement label='Bit 2 OFF'>
          <text>fset</text><text>400</text>
        </statement>
      </session>
      <session id='lanon' label='CS LAN ON'>
        <statement label='Bit 3 ON'>
          <text>fset</text><text>5000</text>
        </statement>
      </session>
      <session id='lanoff' label='CS LAN OFF'>
        <statement label='Bit 3 OFF'>
          <text>fset</text><text>4000</text>
        </statement>
      </session>
      <session id='ipwon' label='CS IPW ON'>
        <statement label='Bit 4 ON'>
          <text>fset</text><text>50000</text>
        </statement>
      </session>
      <session id='ipwoff' label='CS IPW OFF'>
        <statement label='Bit 4 OFF'>
          <text>fset</text><text>40000</text>
        </statement>
      </session>
      <session id='ston' label='STOW PIN ON'>
        <statement label='Bit 5 ON'>
          <text>fset</text><text>500000</text>
        </statement>
      </session>
      <session id='stoff' label='STOW PIN OFF'>
        <statement label='Bit 5 OFF'>
          <text>fset</text><text>400000</text>
        </statement>
      </session>
    </commands>
    <status>
      <value format='%s' id='iid' label='CAS INST ID'>
        <string ref='c1d2'/>
      </value>
      <value format='%s' id='ipw' label='CAS IPW'>
        <binary bit='0' ref='c1d1'/>
      </value>
      <value format='%s' id='stp' label='STOW PIN'>
        <binary bit='1' ref='c1d1'/>
      </value>
      <value format='%s' id='ccd' label='CAS CCD PW'>
        <binary bit='2' ref='c1d0'/>
      </value>
      <value format='%s' id='lan' label='CAS LAN PW'>
        <binary bit='3' ref='c1d0'/>
      </value>
      <value format='%s' id='c3p' label='CIAX3 PW'>
        <binary bit='0' ref='c1d0'/>
      </value>
      <value format='%s' id='c3e' label='CIAX3 EMG'>
        <binary bit='1' ref='c1d0'/>
      </value>
    </status>
  </class>
</cdb>
