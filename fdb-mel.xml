<?xml version="1.0" encoding="utf-8"?>
<fdb xmlns="http://ciax.sum.naoj.org/ciax-xml/fdb">
  <frame id="mel" version="4" label="MELSEC Q Series" endian="little" ccmethod="len">
    <cmdframe xmlns="http://ciax.sum.naoj.org/ciax-xml/fdbc">
      <char length="2" label="SubHeader: Prefix">0x54</char>
      <string label="SubHeader: Serial Number">XX</string>
      <char length="2" label="SubHeader: Fixed Number">0</char>
      <char length="1" label="Q Header: Network Number">0</char>
      <char length="1" label="Q Header: PC Number">0xFF</char>
      <char length="2" label="Q Header: Request Unit I/O Number">0x3FF</char>
      <char length="1" label="Q Header: Request Unit Station Number">0</char>
      <char length="1" label="Q Header: Send Data Length MSB">${cc}</char>
      <char length="1" label="Q Header: Send Data Length LSB">0</char>
      <ccrange>
        <char length="2" label="Q Header: CPU Watch Timer">1</char>
        <body/>
      </ccrange>
    </cmdframe>
    <command xmlns="http://ciax.sum.naoj.org/ciax-xml/fdbc">
      <item id="getstat" label="Get all status" response="getstat" type="stat">
        <char length="2" label="Read region command">0x401</char>
        <char length="2" label="Read region subcommand">0</char>
        <char length="3" label="Start Address">0</char>
        <char length="1" label="Device Code">0xB4</char>
        <char length="2" label="Data Length">52</char>
      </item>
      <item id="getcmd" label="Get cmd status" response="getcmd" type="stat">
        <char length="2" label="Read region command">0x401</char>
        <char length="2" label="Read region subcommand">0</char>
        <char length="3" label="Start Address">0x100</char>
        <char length="1" label="Device Code">0xB4</char>
        <char length="2" label="Data Length">5</char>
      </item>
      <item id="set_tag" label="Set Tag to Run [1-12,98,99]" response="cmdrsp" type="config">
        <par_num>1:12,98,99</par_num>
        <char length="2" label="Write region command">0x1401</char>
        <char length="2" label="Write region subcommand">0</char>
        <char length="3" label="Start Address">0x101</char>
        <char length="1" label="Device Code">0xB4</char>
        <char length="2" label="Data Length">1</char>
        <char length="2">$1</char>
      </item>
      <item id="set_pos" label="Set Pos to Jack [0-4]" response="cmdrsp" type="config">
        <par_num>0:4</par_num>
        <char length="2" label="Write region command">0x1401</char>
        <char length="2" label="Write region subcommand">0</char>
        <char length="3" label="Start Address">0x103</char>
        <char length="1" label="Device Code">0xB4</char>
        <char length="2" label="Data Length">1</char>
        <char length="2">1 &lt;&lt; $1</char>
      </item>
      <item id="set_ins" label="Set Instrument ID" response="cmdrsp" type="config">
        <par_num>0:10</par_num>
        <char length="2" label="Write region command">0x1401</char>
        <char length="2" label="Write region subcommand">0</char>
        <char length="3" label="Start Address">0x104</char>
        <char length="1" label="Device Code">0xB4</char>
        <char length="2" label="Data Length">1</char>
        <char length="2">$1</char>
      </item>
      <item id="act" label="Action Trigger [b0=run,b8=jak,b15=chg]" response="cmdrsp" type="action">
        <par_num>0,8,15</par_num>
        <char length="2" label="Write region command">0x1401</char>
        <char length="2" label="Write region subcommand">0</char>
        <char length="3" label="Start Address">0x102</char>
        <char length="1" label="Device Code">0xB4</char>
        <char length="2" label="Data Length">1</char>
        <char length="2">1 &lt;&lt; $1</char>
      </item>
      <item id="int" label="Interrupt Trigger [b0=pause,emg,,chg,cancel,reset,mater,cycle]" response="cmdrsp" type="action">
        <par_num>0:7</par_num>
        <char length="2" label="Write region command">0x1401</char>
        <char length="2" label="Write region subcommand">0</char>
        <char length="3" label="Start Address">0x100</char>
        <char length="1" label="Device Code">0xB4</char>
        <char length="2" label="Data Length">1</char>
        <char length="2">1 &lt;&lt; $1</char>
      </item>
      <item id="clr_act" label="Clear Action Flags" response="cmdrsp" type="config">
        <char length="2" label="Write region command">0x1401</char>
        <char length="2" label="Write region subcommand">0</char>
        <char length="3" label="Start Address">0x102</char>
        <char length="1" label="Device Code">0xB4</char>
        <char length="2" label="Data Length">1</char>
        <char length="2" label="Data">0</char>
      </item>
      <item id="clr_int" label="Clear Interrupt Flags" response="cmdrsp" type="config">
        <char length="2" label="Write region command">0x1401</char>
        <char length="2" label="Write region subcommand">0</char>
        <char length="3" label="Start Address">0x100</char>
        <char length="1" label="Device Code">0xB4</char>
        <char length="2" label="Data Length">1</char>
        <char length="2" label="Data">0</char>
      </item>
      <item id="get_tbl" label="Get Jack Table [Tag=0-5] [JK=0-3]" response="get_tbl" type="stat">
        <par_num>0:5</par_num>
        <par_num>0:3</par_num>
        <char length="2" label="Read region command">0x401</char>
        <char length="2" label="Read region subcommand">0</char>
        <!--Jack 0=JK1,1=JK2,2=JK3,3=JK4-->
        <char label="Jack Num" length="1">$2 * 64</char>
        <!--Tag 0=Tag1,1=Tag9,2=Tag10,3=Tag11,4=Tag12,5=Opsm-->
        <char label="Tag Num" length="1">$1 + 2</char>
        <char length="1" label="Address MSB">0</char>
        <char length="1" label="Device Code">0xB4</char>
        <char length="2" label="Data Length">0x2c</char>
      </item>
      <item id="set_tbl" label="Set Jack Table from Field [Tag=0-5] [JK=0-3]" nocache="true" response="cmdrsp" type="config">
        <par_num>0:5</par_num>
        <par_num>0:3</par_num>
        <char length="2" label="Write region command">0x1401</char>
        <char length="2" label="Write region subcommand">0</char>
        <char length="1" label="Jack Num">$2 * 4</char>
        <char length="1" label="Tag Num">$1 + 2</char>
        <char length="1" label="Address MSB">0</char>
        <char length="1" label="Device Code">0xB4</char>
        <char length="2" label="Data Length">0x2c</char>
        <char length="2">${t:$1:$2}</char>
      </item>
      <item id="rw_tbl" label="Read/Write Jack Table [0=Reset,1=Read,2=Write]" response="cmdrsp" type="config">
        <par_num>0:2</par_num>
        <char length="2" label="Write region command">0x1401</char>
        <char length="2" label="Write region subcommand">0</char>
        <char length="3" label="Start Address">0x7ff</char>
        <char length="1" label="Device Code">0xB4</char>
        <char length="2" label="Data Length">1</char>
        <char length="2" label="Parameter">$1</char>
      </item>
    </command>
    <rspframe xmlns="http://ciax.sum.naoj.org/ciax-xml/fdbr">
      <field decode="unsigned" label="SubHeader: Prefix" length="2">212</field>
      <field label="SubHeader: Serial Number">XX</field>
      <field decode="unsigned" label="SubHeader: Fixed Number" length="2">0</field>
      <field decode="unsigned" label="Q Header: Network Number" length="1">0</field>
      <field decode="unsigned" label="Q Header: PC Number" length="1">255</field>
      <field decode="unsigned" label="Q Header: Request Unit I/O Number" length="2">1023</field>
      <field decode="unsigned" label="Q Header: Request Unit Station Number" length="1">0</field>
      <field assign="cc" decode="unsigned" label="Response Data Length" length="2" />
      <ccrange>
        <field assign="ecode" decode="unsigned" label="Error Code" length="2">0</field>
        <body/>
      </ccrange>
    </rspframe>
    <response xmlns="http://ciax.sum.naoj.org/ciax-xml/fdbr">
      <response id="getstat" label="get status">
        <array assign="x" decode="signed" label="Status Flags" length="2">
          <index size="52" />
        </array>
      </response>
      <response id="getcmd" label="get cmd status">
        <array assign="c" decode="signed" label="Command Flags" length="2">
          <index size="5" />
        </array>
      </response>
      <response id="cmdrsp" label="command resp" />
      <response id="get_tbl">
        <array assign="t" decode="unsigned" label="Jack Pulse Tables" length="2">
          <!--Tag-->
          <index range="$1" size="6"/>
          <!--Jak-->
          <index range="$2" size="4" />
          <!--ID[0-10],Level[0-3]-->
          <index size="44" />
        </array>
      </response>
    </response>
  </frame>
</fdb>
