<?xml version="1.0" encoding="utf-8"?>
<fdb xmlns="http://ciax.sum.naoj.org/ciax-xml/fdb">
  <frame id="srm" label="OMRON SRM1" ccmethod="bcc" wait="0.3" version="1">
    <serial databit="7" flowctl="NONE" parity="EVEN" speed="9600" stopbit="1" />
    <cmdframe xmlns="http://ciax.sum.naoj.org/ciax-xml/fdbc">
      <ccrange>
        <string label="Prefix">@</string>
        <string label="Device No.">00</string>
        <body/>
      </ccrange>
      <string format="%02X">${cc}</string>
      <string label="Suffix">*</string>
      <char length="1" label="Delimiter">0xd</char>
    </cmdframe>
    <commands xmlns="http://ciax.sum.naoj.org/ciax-xml/fdbc">
      <item id="getmodel" label="Get Model Code" response="getmodel" type="stat">
        <string label="Header Code">MM</string>
      </item>
      <item id="getstat" label="Get Status" response="getstat" type="stat">
        <string label="Header Code">RR</string>
        <string label="Start Channel">0000</string>
        <string label="length">0001</string>
      </item>
      <item id="fset" label="Multiple Forced Set [D*16]" response="fset" type="action">
        <par_num>0:500000</par_num>
        <string label="Header Code">FK</string>
        <string label="Operand">CIO </string>
        <string label="Channel">0000</string>
        <!--[000..04(5)]-->
        <string format="%016d">$1</string>
      </item>
    </commands>
    <rspframe xmlns="http://ciax.sum.naoj.org/ciax-xml/fdbr" terminator="\r">
      <ccrange>
        <field label="Prefix" length="1">@</field>
        <body/>
      </ccrange>
      <field assign="cc" decode="hexstr" label="BCC" length="2" />
      <field label="Terminater" length="1">*</field>
    </rspframe>
    <responses xmlns="http://ciax.sum.naoj.org/ciax-xml/fdbr">
      <response id="getmodel">
        <field label="Command Code" length="4">00MM</field>
        <field label="Response Code" length="2" assign="cod"></field>
        <field assign="model" label="Model Number" length="2" />
      </response>
      <response id="getstat">
        <field label="Command Code" length="4">00RR</field>
        <field label="Response Code" length="2" assign="cod"></field>
        <!--Big endian-->
        <field assign="c1d3" label="CH1 bit12-15" length="1" />
        <field assign="c1d2" label="CH1 bit8-11" length="1" />
        <field assign="c1d1" label="CH1 bit4-7" length="1" />
        <field assign="c1d0" label="CH1 bit0-3" length="1" />
      </response>
      <response id="fset">
        <field label="Command Code" length="4">00FK</field>
        <field label="Exit Code" length="2" assign="cod"></field>
      </response>
    </responses>
  </frame>
</fdb>
