<?xml version="1.0" encoding="iso-8859-1"?>
<ddb xsi:schemaLocation="http://ciax.sum.naoj.org/ciax-xml/schema/ddb.xsd" xmlns="http://ciax.sum.naoj.org/ciax-xml/ddb" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <device id="ixe" label="Phytron IXEa-A" reference="http://ciax.sum.naoj.org/man/phytron/phytron-ixe.pdf" wait="0.2">
    <serial databit="8" flowctl="NONE" parity="NONE" speed="9600" stopbit="1" />
    <cmdselect>
      <!--String Length must be <32-->
      <command id="getstat" label="Get status" response="getstat" type="stat">
        <data text="ST" type="text" />
      </command>
      <command id="initrot" label="Parameter set for rotation" response="default" type="config">
        <repeat from="1" to="6">
          <data text="$_" type="formula" />
          <data text="P01S0" type="text" />
        </repeat>
      </command>
      <command id="initunit" label="Parameter unit set to pulse step" response="default" type="config">
        <repeat from="1" to="6">
          <data text="$_" type="formula" />
          <data text="P02S1" type="text" />
        </repeat>
      </command>
      <command id="initfactor" label="Parameter unit factor set to 1" response="default" type="config">
        <repeat from="1" to="6">
          <data text="$_" type="formula" />
          <data text="P03S1" type="text" />
        </repeat>
      </command>
      <command id="chkems" label="Check Emstop [1-6]" response="chkems" type="stat">
        <parameters>
          <par label="[1-6]" range="1:6"></par>
        </parameters>
        <data text="$1" type="formula" />
        <data text="=N" type="text" />
      </command>
      <command id="chkpse" label="Check Power Stage Err [1-6]" response="chkpse" type="stat">
        <parameters>
          <par label="[1-6]" range="1:6"></par>
        </parameters>
        <data text="$1" type="formula" />
        <data text="=E" type="text" />
      </command>
      <command id="chkrun" label="Check Run [1-6]" response="chkrun" type="stat">
        <parameters>
          <par label="[1-6]" range="1:6"></par>
        </parameters>
        <data text="$1" type="formula" />
        <data text="=H" type="text" />
      </command>
      <command id="getp" label="Get pulse [1-6]" response="getp" type="stat">
        <parameters>
          <par label="[1-6]" range="1:6"></par>
        </parameters>
        <data text="$1" type="formula" />
        <data text="P21R" type="text" />
      </command>
      <command id="setp_a" label="Set pulse from buffer(1-3)" nocache="true" response="default" type="config">
        <repeat from="1" to="3">
          <data text="$_" type="formula" />
          <data text="P21S" type="text" />
          <data text="${p:$_-1}" type="formula" />
        </repeat>
      </command>
      <command id="setp_b" label="Set pulse from buffer(4-6)" nocache="true" response="default" type="config">
        <repeat from="4" to="6">
          <data text="$_" type="formula" />
          <data text="P21S" type="text" />
          <data text="${p:$_-1}" type="formula" />
        </repeat>
      </command>
      <command id="getspd" label="Get speed [1-6]" response="getspd" type="stat">
        <parameters>
          <par label="[1-6]" range="1:6"></par>
        </parameters>
        <data text="$1" type="formula" />
        <data text="P14R" type="text" />
      </command>
      <command id="setspd_a" label="Set speed from buffer (1-3)" nocache="true" response="default" type="config">
        <repeat delimiter=" " from="1" to="3">
          <data text="$_" type="formula" />
          <data text="P14S" type="text" />
          <data text="${spd:$_-1}" type="formula" />
        </repeat>
      </command>
      <command id="setspd_b" label="Set speed from buffer (4-6)" nocache="true" response="default" type="config">
        <repeat delimiter=" " from="4" to="6">
          <data text="$_" type="formula" />
          <data text="P14S" type="text" />
          <data text="${spd:$_-1}" type="formula" />
        </repeat>
      </command>
      <command id="getofs" label="Get Offset [1-6]" response="getofs" type="stat">
        <parameters>
          <par label="[1-6]" range="1:6"></par>
        </parameters>
        <data text="$1" type="formula" />
        <data text="P12R" type="text" />
      </command>
      <command id="setofs_a" label="Set offset from buffer(1-3)" nocache="true" response="default" type="config">
        <repeat from="1" to="3">
          <data text="$_" type="formula" />
          <data text="P12S" type="text" />
          <data text="${ofs:$_-1}" type="formula" />
        </repeat>
      </command>
      <command id="setofs_b" label="Set offset from buffer(4-6)" nocache="true" response="default" type="config">
        <repeat from="4" to="6">
          <data text="$_" type="formula" />
          <data text="P12S" type="text" />
          <data text="${ofs:$_-1}" type="formula" />
        </repeat>
      </command>
      <command id="act" label="Activate (Servo) All" response="default" type="action">
        <repeat from="1" to="6">
          <data text="$_" type="formula" />
          <data text="MA" type="text" />
        </repeat>
      </command>
      <command id="deact" label="Deactivate (Free) All" response="default" type="action">
        <repeat from="1" to="6">
          <data text="$_" type="formula" />
          <data text="MD" type="text" />
        </repeat>
      </command>
      <command id="stop" label="Stop Moving [1-6]" response="default" type="action">
        <parameters>
          <par label="[1-6]" range="1:6"></par>
        </parameters>
        <data text="$1" type="formula" />
        <data text="S" type="text" />
      </command>
      <command id="init" label="Initialize [1-6]" response="default" type="action">
        <parameters>
          <par label="[1-6]" range="1:6"></par>
        </parameters>
        <data text="$1" type="formula" />
        <data text="0" type="text" />
      </command>
      <command id="fw" label="Move forward (8000/hole)" response="default" type="action">
        <parameters>
          <par label="[1-6]" range="1:6"></par>
          <par label="[0-192000]" range="0:192000"></par>
        </parameters>
        <data text="$1" type="formula" />
        <data text="+" type="text" />
        <data text="$2" type="formula" />
      </command>
      <command id="bk" label="Move backward (8000/hole)" response="default" type="action">
        <parameters>
          <par label="[1-6]" range="1:6"></par>
          <par label="[0-192000]" range="0:192000"></par>
        </parameters>
        <data text="$1" type="formula" />
        <data text="-" type="text" />
        <data text="$2" type="formula" />
      </command>
      <command id="abs" label="Move absolute pos [0-192000] (8000/hole)" response="default" type="action">
        <parameters>
          <par label="[1-6]" range="1:6"></par>
          <par label="[0-192000]" range="0:192000"></par>
        </parameters>
        <data text="$1" type="formula" />
        <data text="A" type="text" />
        <data text="$2" type="formula" />
      </command>
    </cmdselect>
    <cmdframe>
      <data encode="chr" label="Prefix" text="2" type="text" />
      <selected />
      <data encode="chr" label="Suffix" text="3" type="text" />
      <data encode="chr" text="13" type="text" />
      <data encode="chr" text="10" type="text" />
    </cmdframe>
    <rspselect>
      <response id="getstat">
        <field assign="stat" />
      </response>
      <response id="chkrun">
        <array assign="run">
          <index range="$1-1" size="6" />
        </array>
      </response>
      <response id="chkems">
        <array assign="ems">
          <index range="$1-1" size="6" />
        </array>
      </response>
      <response id="chkpse">
        <array assign="pse">
          <index range="$1-1" size="6" />
        </array>
      </response>
      <response id="getp">
        <array assign="p">
          <index range="$1-1" size="6" />
        </array>
      </response>
      <response id="getspd">
        <array assign="spd">
          <index range="$1-1" size="6" />
        </array>
      </response>
      <response id="getofs">
        <array assign="ofs">
          <index range="$1-1" size="6" />
        </array>
      </response>
      <response id="default" />
    </rspselect>
    <rspframe terminator="\003\r\n">
      <field decode="chr" label="Prefix" length="1" verify="2" />
      <field decode="chr" label="ACK" length="1" verify="6" />
      <selected />
    </rspframe>
  </device>
</ddb>