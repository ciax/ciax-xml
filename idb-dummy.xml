<?xml version="1.0" encoding="utf-8"?>
<idb xmlns="http://ciax.sum.naoj.org/ciax-xml/idb">
  <project id="dummy" label="Dummy simulator">
    <group id="sim" label="Dummy simulator">
      <instance id="tfp" app_id="cfp" host="localhost" port="25691" label="TEST Field Point"/>
      <instance id="tap" app_id="oma" host="localhost" port="25692" label="TEST Air Pres"/>
      <instance id="tma" app_id="mma" host="localhost" port="25693" label="TEST Arm"/>
      <instance id="tmc" app_id="mmc" host="localhost" port="25694" label="TEST Carousel">
        <command ref="mmc"/>
        <status xmlns="http://ciax.sum.naoj.org/ciax-xml/idbs">
          <group ref="gpos">
            <alias id="acs" ref="abs" label="Access Position" symbol="acs"/>
          </group>
          <group ref="ghide">
            <alias id="rsl" ref="abs" label="Loading Position for Machine" symbol="rsl"/>
            <alias id="asl" ref="abs" label="Access Position for Machine" symbol="asl"/>
          </group>
        </status>
      </instance>
      <instance id="tbb" app_id="bbe" host="localhost" port="25696" label="TEST BBE simple">
        <status xmlns="http://ciax.sum.naoj.org/ciax-xml/idbs">
          <group ref="g0" caption="X0-3"/>
          <group ref="g1" caption="X4-7"/>
          <group ref="g2" caption="X8-11"/>
          <group ref="g3" caption="X12-15"/>
        </status>
      </instance>
      <instance id="tbw" app_id="bbe" frm_site="tbb" host="localhost" port="25697" label="TEST BBE with Watch">
        <command ref="tbb"/>
        <status xmlns="http://ciax.sum.naoj.org/ciax-xml/idbs">
          <group ref="g0" caption="X0-3"/>
          <group ref="g1" caption="X4-7"/>
          <group ref="g2" caption="X8-11"/>
          <group ref="g3" caption="X12-15"/>
        </status>
        <watch xmlns="http://ciax.sum.naoj.org/ciax-xml/wdb" interval="0.2">
          <event label="ON Executed 1" id="on1">
            <onchange var="xsw0"/>
            <pattern var="xsw0">1</pattern>
            <pattern var="xsw1">0</pattern>
            <exec name="x1on"/>
          </event>
          <event label="ON Executed 2" id="on2">
            <onchange var="xsw1"/>
            <pattern var="xsw1">1</pattern>
            <pattern var="xsw2">0</pattern>
            <exec name="x2on"/>
          </event>
          <event label="ON Executed 3" id="on3">
            <onchange var="xsw2"/>
            <pattern var="xsw2">1</pattern>
            <pattern var="xsw3">0</pattern>
            <exec name="x3on"/>
          </event>
          <event label="OFF Executed 1" id="off1">
            <onchange var="xsw0"/>
            <pattern var="xsw0">0</pattern>
            <pattern var="xsw1">1</pattern>
            <exec name="x1off"/>
          </event>
          <event label="OFF Executed 2" id="off2">
            <onchange var="xsw1"/>
            <pattern var="xsw1">0</pattern>
            <pattern var="xsw2">1</pattern>
            <exec name="x2off"/>
          </event>
          <event label="OFF Executed 3" id="off3">
            <onchange var="xsw2"/>
            <pattern var="xsw2">0</pattern>
            <pattern var="xsw3">1</pattern>
            <exec name="x3off"/>
          </event>
        </watch>
      </instance>
    </group>
  </project>
</idb>
