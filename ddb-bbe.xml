<?xml version="1.0" encoding="iso-8859-1"?>
<ddb xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://ciax.sum.naoj.org/ciax-xml/schema/ddb.xsd" xmlns="http://ciax.sum.naoj.org/ciax-xml">
  <device id="bbe" label="BB Electric">
    <serial speed="9600" databit="8" parity="NONE" stopbit="1" flowctl="NONE" />
    <cmdframe>
      <data label="Prefix">!0</data>
      <select>
        <option id="getstat" type="stat" label="Get Status">
          <data>RD</data>
        </option>
        <option id="defio" type="config" label="DEFINE IN/OUT">
          <data>SD</data>
          <data label="msb" pack="H*">1111</data>
        </option>
        <option id="output" type="action" label="OUTPUT [HHHH]">
          <data>SO</data>
          <data ref="par" type="int" pack="n"></data>
        </option>
      </select>
    </cmdframe>
    <rspframe wait="0.3">
      <select>
        <option id="getstat">
          <!--Big endian-->
          <assign field="stat" length="2" unpack="n" />
        </option>
      </select>
    </rspframe>
  </device>
</ddb>