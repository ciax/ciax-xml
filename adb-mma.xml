<?xml version="1.0" encoding="utf-8"?>
<adb xmlns="http://ciax.sum.naoj.org/ciax-xml/adb">
  <app frm_id="slo" id="mma" label="MOIRCS Arm">
    <commands xmlns="http://ciax.sum.naoj.org/ciax-xml/adbc">
      <group id="g0" caption="Device">
        <item id="upd" label="Update Status">
          <frmcmd name="getstat" />
          <frmcmd name="bs" />
          <frmcmd name="p" />
          <repeat from="1" to="5">
            <frmcmd name="in">
              <argv>$_</argv>
          </frmcmd>
          </repeat>
        </item>
        <item id="reset" label="Reset">
          <frmcmd name="reset" />
        </item>
        <item id="defcon" label="Default Config">
          <frmcmd name="hl">
            <argv>1</argv>
          </frmcmd>
          <frmcmd name="e1">
            <argv>0</argv>
          </frmcmd>
          <frmcmd name="e2">
            <argv>0</argv>
          </frmcmd>
        </item>
        <item id="set0" label="Set 0 Pulses">
          <frmcmd name="set0" />
        </item>
        <item id="gf" label="Goto Focal Position">
          <frmcmd name="ma">
            <argv>12.8</argv>
          </frmcmd>
        </item>
        <item id="gr" label="Goto Rotate Position">
          <frmcmd name="ma">
            <argv>123</argv>
          </frmcmd>
        </item>
        <item id="gw" label="Goto Waiting Position">
          <frmcmd name="ma">
            <argv>185</argv>
          </frmcmd>
        </item>
        <item id="gs" label="Goto Stock Position">
          <frmcmd name="ma">
            <argv>jp</argv>
          </frmcmd>
        </item>
        <item id="sets" label="Set Stock Pos Pulse">
          <frmcmd name="setp">
            <argv>200.44</argv>
          </frmcmd>
        </item>
        <item id="rini" label="Init to RP at AV">
          <frmcmd name="e2">
            <argv>1</argv>
          </frmcmd>
          <frmcmd name="mhn"></frmcmd>
        </item>
        <item id="setr" label="Set Rotate Pos Pulse">
          <frmcmd name="setp">
            <argv>123</argv>
          </frmcmd>
        </item>
        <item id="updp" label="Update Pulse" hidden="true">
          <frmcmd name="p" />
          <frmcmd name="in">
            <argv>5</argv>
          </frmcmd>
          <frmcmd name="in">
            <argv>3</argv>
          </frmcmd>
        </item>
        <item id="stop" label="Stop Run" hidden="true">
          <frmcmd name="stop" />
        </item>
      </group>
    </commands>
    <status xmlns="http://ciax.sum.naoj.org/ciax-xml/adbs" symtbl="mma">
      <group id="g1" caption="" column="3">
        <string id="bs" label="Moter Moving" symbol="warn">
          <field ref="bs" />
        </string>
        <string id="con" label="Contact Sensor" symbol="normal">
          <field ref="in" index="4" />
        </string>
        <integer id="err" label="Error Code" symbol="err">
          <field ref="err" />
        </integer>
        <string id="pos" label="Arm Position" symbol="pos">
          <field ref="in" index="0" />
          <field ref="in" index="1" />
          <field ref="in" index="2" />
          <field ref="in" index="3" />
        </string>
        <float id="abs" label="ABS position" symbol="abs">
          <field ref="p" />
        </float>
      </group>
    </status>
    <watch xmlns="http://ciax.sum.naoj.org/ciax-xml/wdb" interval="1">
      <event id="mot" label="On Motion">
        <pattern var="bs">1</pattern>
        <block name="gf" />
        <block name="gr" />
        <block name="gw" />
        <block name="gs" />
        <int name="stop" />
        <exec name="updp"></exec>
      </event>
      <event label="Reset Config" id="res">
        <onchange var="bs"></onchange>
        <pattern var="bs">0</pattern>
        <exec name="defcon"></exec>
      </event>
    </watch>
  </app>
</adb>
