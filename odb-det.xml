<?xml version="1.0" encoding="iso-8859-1"?>
<odb xsi:schemaLocation="http://ciax.sum.naoj.org/ciax-xml/schema/odb.xsd" xmlns="http://ciax.sum.naoj.org/ciax-xml" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <object client="socat - tcp:ltc-c:4001" device="srm" id="det" label="CsEtr Controller" server="socat - udp-l:25104,reuseaddr,fork">
    <selection>
      <session id="upd" label="Update Status">
        <command>
          <text>getstat</text>
        </command>
      </session>
      <session id="c3on" label="CIAX3 POWER ON">
        <command label="Bit 0 on">
          <text>fset</text>
          <text>5</text>
        </command>
      </session>
      <session id="c3off" label="CIAX3 POWER OFF">
        <command label="Bit 0 OFF">
          <text>fset</text>
          <text>4</text>
        </command>
      </session>
      <session id="emon" label="CIAX3 EMERGENCY ON">
        <command label="Bit 1 ON">
          <text>fset</text>
          <text>50</text>
        </command>
      </session>
      <session id="emoff" label="CIAX3 EMERGENCY OFF">
        <command label="Bit 1 OFF">
          <text>fset</text>
          <text>40</text>
        </command>
      </session>
      <session id="ccdon" label="CS CCD ON">
        <command label="Bit 2 ON">
          <text>fset</text>
          <text>500</text>
        </command>
      </session>
      <session id="ccdoff" label="CS CCD OFF">
        <command label="Bit 2 OFF">
          <text>fset</text>
          <text>400</text>
        </command>
      </session>
      <session id="lanon" label="CS LAN ON">
        <command label="Bit 3 ON">
          <text>fset</text>
          <text>5000</text>
        </command>
      </session>
      <session id="lanoff" label="CS LAN OFF">
        <command label="Bit 3 OFF">
          <text>fset</text>
          <text>4000</text>
        </command>
      </session>
      <session id="ipwon" label="CS IPW ON">
        <command label="Bit 4 ON">
          <text>fset</text>
          <text>50000</text>
        </command>
      </session>
      <session id="ipwoff" label="CS IPW OFF">
        <command label="Bit 4 OFF">
          <text>fset</text>
          <text>40000</text>
        </command>
      </session>
      <session id="ston" label="STOW PIN ON">
        <command label="Bit 5 ON">
          <text>fset</text>
          <text>500000</text>
        </command>
      </session>
      <session id="stoff" label="STOW PIN OFF">
        <command label="Bit 5 OFF">
          <text>fset</text>
          <text>400000</text>
        </command>
      </session>
    </selection>
    <status>
      <var id="iid" label="CAS INST ID" symbol="inst" trail="true">
        <string field="c1d2" />
      </var>
      <var id="ipw" label="CAS IPW" symbol="off-warn">
        <binary bit="0" field="c1d1" />
      </var>
      <var id="stp" label="STOW PIN" symbol="on-warn" trail="true">
        <binary bit="1" field="c1d1" />
      </var>
      <var id="ccd" label="CAS CCD PW" symbol="on-warn" trail="true">
        <binary bit="2" field="c1d0" />
      </var>
      <var id="lan" label="CAS LAN PW" symbol="hide">
        <binary bit="3" field="c1d0" />
      </var>
      <var id="c3p" label="CIAX3 PW" symbol="hide" trail="true">
        <binary bit="0" field="c1d0" />
      </var>
      <var id="c3e" label="CIAX3 EMG" symbol="alarm">
        <binary bit="1" field="c1d0" />
      </var>
    </status>
    <symbols>
      <symbol id="inst" type="ENUM">
        <case hl="warn" msg="NONE">0</case>
        <case hl="normal" msg="CIAX3">1</case>
        <case hl="normal" msg="COMICS">2</case>
        <case hl="normal" msg="CIAO">3</case>
        <case hl="normal" msg="FOCAS">4</case>
        <case hl="normal" msg="IRCS">5</case>
        <case hl="normal" msg="N/A">6</case>
        <case hl="normal" msg="MOIRCS">7</case>
        <case hl="normal" msg="MP-CS1">8</case>
        <case hl="normal" msg="MP-CS2">9</case>
      </symbol>
    </symbols>
  </object>
</odb>